{
	"inputs": [
		{
			"type": "promptString",
			"id": "brave_api_key",
			"description": "Brave Search API Key",
			"password": true
		},
		{
			"type": "promptString",
			"id": "firecrawl_api_key",
			"description": "Firecrawl API Key",
			"password": true
		},
		{
			"type": "promptString",
			"id": "pinecone_api_key",
			"description": "Pinecone API Key",
			"password": true
		},
		{
			"type": "promptString",
			"id": "perplexity_api_key",
			"description": "Perplexity API Key",
			"password": true
		},
		{
			"type": "promptString",
			"id": "dataforseo_username",
			"description": "DataForSEO Username",
			"password": false
		},
		{
			"type": "promptString",
			"id": "dataforseo_password",
			"description": "DataForSEO Password",
			"password": true
		},
		{
			"type": "promptString",
			"id": "postgres_connection_string",
			"description": "PostgreSQL Connection String",
			"password": true
		}
	],
	"servers": {
		"braveSearch": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-brave-search"
			],
			"env": {
				"BRAVE_API_KEY": "${input:brave_api_key}"
			}
		},
		"filesystem": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"${workspaceFolder}"
			]
		},
		"sequentialThinking": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		},
		
		"firecrawl": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"firecrawl-mcp"
			],
			"env": {
				"FIRECRAWL_API_KEY": "${input:firecrawl_api_key}"
			}
		},
		"pinecone": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@pinecone-database/mcp"
			],
			"env": {
				"PINECONE_API_KEY": "${input:pinecone_api_key}"
			}
		},
		"knowledgeGraphMemory": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory"
			]
		},
		"perplexity": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"server-perplexity-ask"
			],
			"env": {
				"PERPLEXITY_API_KEY": "${input:perplexity_api_key}"
			}
		},
		"postgresql": {
			"type": "stdio",
			"command": "node",
			"args": [
				"mcp-postgres-limited.js"
			],
			"env": {
				"POSTGRES_CONNECTION_STRING": "postgresql://postgres:Olumide123!@localhost:5432/my-marketplace"
			}
		},
		"figma": {
			"type": "http",
			"url": "http://127.0.0.1:3845/mcp"
		},
		"Notion": {
			"url": "https://mcp.notion.com/mcp"
		}
	}
}
