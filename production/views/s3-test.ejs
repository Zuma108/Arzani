<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>S3 Configuration Test</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .upload-container {
            margin-top: 2rem;
            padding: 1.5rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f8f9fa;
        }
        .result-container {
            margin-top: 1.5rem;
            padding: 1rem;
            border-radius: 8px;
            display: none;
        }
        .success {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }
        .error {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }
        .debug-info {
            font-family: monospace;
            font-size: 0.9rem;
            white-space: pre-wrap;
            padding: 0.5rem;
            background: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>S3 Configuration Test</h1>

        <% if (error) { %>
            <div class="alert alert-danger">
                <strong>Error:</strong> <%= error %>
            </div>
        <% } %>

        <div class="card mb-4">
            <div class="card-header">Environment Configuration</div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">AWS_ACCESS_KEY_ID: <%= envStatus.AWS_ACCESS_KEY_ID %></li>
                    <li class="list-group-item">AWS_SECRET_ACCESS_KEY: <%= envStatus.AWS_SECRET_ACCESS_KEY %></li>
                    <li class="list-group-item">AWS_REGION: <%= envStatus.AWS_REGION %></li>
                    <li class="list-group-item">AWS_BUCKET_NAME: <%= envStatus.AWS_BUCKET_NAME %></li>
                </ul>
            </div>
        </div>

        <% if (testResults) { %>
            <div class="card mb-4">
                <div class="card-header">Connectivity Test Results</div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <span class="<%= testResults.primaryRegion.success ? 'text-success' : 'text-danger' %>">
                                <strong>Primary Region (eu-west-2):</strong>
                                <%= testResults.primaryRegion.success ? 'Connected' : 'Failed' %>
                            </span>
                            <% if (testResults.primaryRegion.error) { %>
                                <div class="text-danger small mt-1"><%= testResults.primaryRegion.error %></div>
                            <% } %>
                        </li>
                        <li class="list-group-item">
                            <span class="<%= testResults.fallbackRegion.success ? 'text-success' : 'text-danger' %>">
                                <strong>Fallback Region (eu-north-1):</strong>
                                <%= testResults.fallbackRegion.success ? 'Connected' : 'Failed' %>
                            </span>
                            <% if (testResults.fallbackRegion.error) { %>
                                <div class="text-danger small mt-1"><%= testResults.fallbackRegion.error %></div>
                            <% } %>
                        </li>
                        <li class="list-group-item">
                            <strong>Bucket Name:</strong> <%= testResults.bucketName %>
                        </li>
                    </ul>
                </div>
            </div>
        <% } %>

        <div class="upload-container">
            <h3>Upload Test</h3>
            <p>Select an image to test S3 upload functionality:</p>
            
            <form id="uploadForm" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="file" class="form-control" id="testImage" name="testImage" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary" id="uploadButton">
                    Run Upload Test
                </button>
            </form>
            
            <div id="uploadResult" class="result-container">
                <!-- Results will be displayed here -->
            </div>
        </div>
    </div>

    <script>
        document.getElementById('uploadForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const uploadButton = document.getElementById('uploadButton');
            const resultContainer = document.getElementById('uploadResult');
            const fileInput = document.getElementById('testImage');
            
            // Validate file
            if (!fileInput.files || fileInput.files.length === 0) {
                resultContainer.className = 'result-container error';
                resultContainer.style.display = 'block';
                resultContainer.innerHTML = '<strong>Error:</strong> Please select a file to upload';
                return;
            }
            
            // Create FormData
            const formData = new FormData();
            formData.append('testImage', fileInput.files[0]);
            
            // Disable button and show loading
            uploadButton.disabled = true;
            uploadButton.innerHTML = 'Uploading...';
            
            try {
                // Send upload request
                const response = await fetch('/api/s3-test/upload', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                // Display result
                resultContainer.style.display = 'block';
                
                if (response.ok && data.success) {
                    resultContainer.className = 'result-container success';
                    resultContainer.innerHTML = `
                        <strong>Success!</strong> File uploaded to ${data.region}
                        <div class="mt-2">
                            <a href="${data.url}" target="_blank" class="btn btn-sm btn-success">View File</a>
                        </div>
                        <div class="debug-info">
                            ${JSON.stringify(data, null, 2)}
                        </div>
                    `;
                } else {
                    resultContainer.className = 'result-container error';
                    resultContainer.innerHTML = `
                        <strong>Error:</strong> ${data.message || 'Upload failed'}
                        <div class="debug-info">
                            ${JSON.stringify(data, null, 2)}
                        </div>
                    `;
                }
            } catch (error) {
                // Handle fetch errors
                resultContainer.className = 'result-container error';
                resultContainer.style.display = 'block';
                resultContainer.innerHTML = `
                    <strong>Error:</strong> Network or server error
                    <div class="debug-info">
                        ${error.message}
                    </div>
                `;
            } finally {
                // Re-enable button
                uploadButton.disabled = false;
                uploadButton.innerHTML = 'Run Upload Test';
            }
        });
    </script>
</body>
</html>
