                                    <p class="text-sm text-gray-600 max-w-xs">
                                        <%= authorBio.length > 50 ? authorBio.substring(0, 50) + '...' : authorBio %>
                                    </p>
                                </div>
                            </div>
                            
                            <!-- Enhanced Meta Information -->
