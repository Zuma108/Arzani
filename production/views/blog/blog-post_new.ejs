                                <% } %>
                                <span class="text-gray-400 font-medium truncate max-w-xs">
                                    <%= blog.title.length > 40 ? blog.title.substring(0, 40) + '...' : blog.title %>
                                </span>
                            </div>
                        </nav>
                        
