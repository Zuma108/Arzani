                <!-- Modern Asymmetrical Layout -->
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
                    <!-- Main Content - Larger on Desktop -->
                    <div class="lg:col-span-8">
                        <!-- Enhanced Breadcrumb Navigation -->
