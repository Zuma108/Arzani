                    </div>
                </div>
            </div>

            <div id="clients-tab" class="tab-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Client Management</h4>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i> Add New Client</button>
                </div>
                <div class="dashboard-card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Client Name</th>
                                        <th>Type</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-5">No clients yet. Click "Add New Client" to get started.</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="listings-tab" class="tab-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Business Listings</h4>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-plus me-1"></i> Add New Listing</button>
                </div>
                <div class="dashboard-card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Business Name</th>
                                        <th>Price</th>
                                        <th>Client</th>
                                        <th>Listed Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-5">No business listings yet. Click "Add New Listing" to get started.</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="messages-tab" class="tab-content">
                <h4 class="mb-3">Messages</h4>
                <div class="dashboard-card">
                    <div class="card-body text-center text-muted py-5">
                        <i class="fas fa-envelope-open-text fa-3x mb-3"></i>
                        <p>Message center coming soon.</p>
                    </div>
                </div>
            </div>
            <div id="documents-tab" class="tab-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">Documents</h4>
                    <button class="btn btn-primary btn-sm"><i class="fas fa-upload me-1"></i> Upload Document</button>
                </div>
                <div class="dashboard-card">
                    <div class="card-body text-center text-muted py-5">
                        <i class="fas fa-folder-open fa-3x mb-3"></i>
                        <p>Document management coming soon.</p>
                    </div>
                </div>
            </div>
            <div id="analytics-tab" class="tab-content">
                <h4 class="mb-3">Analytics</h4>
                <div class="dashboard-card">
                    <div class="card-body text-center text-muted py-5">
                        <i class="fas fa-chart-line fa-3x mb-3"></i>
                        <p>Analytics dashboard coming soon.</p>
                    </div>
                </div>
            </div>
            <div id="settings-tab" class="tab-content">
                <h4 class="mb-3">Settings</h4>
                <div class="dashboard-card">
                    <div class="card-body">
                        <h5>Professional Profile Settings</h5>
                        <p class="text-muted">Customize your public profile, notification preferences, and account settings.</p>
                        <hr>
                        <p class="text-center text-muted py-4">Settings options coming soon.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const sidebarBackdrop = document.getElementById('sidebarBackdrop');

        function setupEventListeners() {
            if (sidebarToggle && sidebar && sidebarBackdrop) {
                sidebarToggle.addEventListener('click', () => {
                    sidebar.classList.toggle('show');
                    sidebarBackdrop.classList.toggle('show');
                });
                sidebarBackdrop.addEventListener('click', () => {
                    sidebar.classList.remove('show');
                    sidebarBackdrop.classList.remove('show');
                });
            }
            const signOutBtn = document.getElementById('signOutBtn');
            if (signOutBtn) {
                signOutBtn.addEventListener('click', () => {
                    localStorage.removeItem('token');
                    window.location.href = '/login2';
                });
            }
        }

        function showTab(tabName, clickedLink) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });

            const activeTab = document.getElementById(`${tabName}-tab`);
            if (activeTab) {
                activeTab.classList.add('active');
            }

            document.querySelectorAll('.sidebar-menu .nav-link').forEach(link => {
                link.classList.remove('active');
            });
            if (clickedLink) {
                clickedLink.classList.add('active');
            }

            if (window.innerWidth < 992 && sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
                sidebarBackdrop.classList.remove('show');
            }
        }

        function formatProfessionalType(type) {
            if (!type) return '';
            return type.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
        }

        async function loadDashboardData() {
            console.log('Loading dashboard data...');
            const token = document.querySelector('meta[name="auth-token"]')?.content || localStorage.getItem('token');
            if (!token) { console.error('Auth token not found'); return; }

            try {
                // Example API call
                // const response = await fetch('/api/professional/dashboard-data', {
                //     headers: { 'Authorization': `Bearer ${token}` }
                // });
                // if (!response.ok) throw new Error('Failed to load data');
                // const data = await response.json();
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            setupEventListeners();
            loadDashboardData();
            showTab('overview', document.querySelector('.sidebar-menu .nav-link.active'));
        });
    </script>
</body>
</html>