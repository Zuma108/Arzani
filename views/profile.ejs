    <!-- Initialize Enhanced Token Balance System -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize enhanced token balance system for profile page
            if (typeof TokenBalanceEnhanced !== 'undefined') {
                console.log('Initializing Enhanced Token Balance for profile page');
                
                // Use the global enhanced token balance instance
                window.profileTokenBalance = window.tokenBalanceEnhanced;
                
                // Add custom balance listener for profile page displays
                window.profileTokenBalance.addBalanceListener(function(balance) {
                    const displayElement = document.getElementById('token-balance-display');
                    if (displayElement) {
                        displayElement.textContent = balance;
                    }
                    
                    // Update any other token displays on profile page
                    const tokenElements = document.querySelectorAll('.token-count, .token-balance-amount');
                    tokenElements.forEach(element => {
                        element.textContent = balance;
                    });
                });
                
                // Load usage statistics
                loadTokenUsageStats();
                
            } else {
                console.error('TokenBalanceEnhanced class not available');
            }
        });
        
        // Function to load token usage statistics
        async function loadTokenUsageStats() {
            try {
                // Use enhanced authentication headers if available
                let headers = { 'Content-Type': 'application/json' };
                if (window.tokenBalanceEnhanced && typeof window.tokenBalanceEnhanced.getAuthHeaders === 'function') {
                    headers = window.tokenBalanceEnhanced.getAuthHeaders();
                } else {
                    // Fallback authentication method
                    const token = localStorage.getItem('authToken') || localStorage.getItem('token');
                    if (token && token !== 'null' && token !== 'undefined') {
                        headers['Authorization'] = `Bearer ${token}`;
                    }
                }
                
                const response = await fetch('/api/tokens/usage-stats', {
                    method: 'GET',
                    credentials: 'include',
                    headers: headers
                });
                
                if (response.ok) {
                    const stats = await response.json();
                    
                    // Update tokens used this month
                    const usedElement = document.getElementById('tokens-used-month');
                    if (usedElement && stats.usedThisMonth !== undefined) {
                        usedElement.textContent = stats.usedThisMonth;
                    }
                    
                    // Update last purchase date
                    const lastPurchaseElement = document.getElementById('last-purchase-date');
                    if (lastPurchaseElement && stats.lastPurchaseDate) {
                        const date = new Date(stats.lastPurchaseDate);
                        lastPurchaseElement.textContent = date.toLocaleDateString();
                    }
                }
            } catch (error) {
                console.error('Error loading token usage stats:', error);
            }
        }
        
        // Function to show token usage history modal
        function showTokenUsageHistory() {
            // Create and show a modal with token usage history
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 z-50 bg-black bg-opacity-50 flex items-center justify-center p-4';
            modal.innerHTML = `
                <div class="bg-white dark:bg-gray-800 rounded-lg max-w-2xl w-full max-h-96 overflow-y-auto">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex justify-between items-center">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Token Usage History</h3>
                            <button onclick="this.closest('.fixed').remove()" class="text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="p-6">
                        <div id="usage-history-content">
                            <div class="text-center py-8">
                                <i class="fas fa-spinner fa-spin text-primary text-2xl mb-2"></i>
                                <p class="text-gray-600 dark:text-gray-400">Loading usage history...</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Load usage history
            loadUsageHistory();
        }
        
        // Function to load detailed usage history
        async function loadUsageHistory() {
            try {
                const response = await fetch('/api/tokens/usage-history', {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem('authToken')}`,
                        'Content-Type': 'application/json'
                    }
                });
                
                const content = document.getElementById('usage-history-content');
                if (!content) return;
                
                if (response.ok) {
                    const history = await response.json();
                    
                    if (history.length === 0) {
                        content.innerHTML = `
                            <div class="text-center py-8">
                                <i class="fas fa-history text-gray-400 text-3xl mb-2"></i>
                                <p class="text-gray-600 dark:text-gray-400">No token usage history yet</p>
                            </div>
                        `;
                    } else {
                        content.innerHTML = history.map(item => `
                            <div class="flex justify-between items-center py-3 border-b border-gray-200 dark:border-gray-700 last:border-b-0">
                                <div>
                                    <p class="font-medium text-gray-900 dark:text-white">${item.action}</p>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">${new Date(item.created_at).toLocaleDateString()}</p>
                                </div>
                                <div class="text-right">
                                    <span class="text-red-600 dark:text-red-400">-${item.amount} tokens</span>
                                </div>
                            </div>
                        `).join('');
                    }
                } else {
                    content.innerHTML = `
                        <div class="text-center py-8">
                            <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-2"></i>
                            <p class="text-red-600">Error loading usage history</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading usage history:', error);
                const content = document.getElementById('usage-history-content');
                if (content) {
                    content.innerHTML = `
                        <div class="text-center py-8">
                            <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-2"></i>
                            <p class="text-red-600">Error loading usage history</p>
                        </div>
                    `;
                }
            }
        }
    </script>
    
