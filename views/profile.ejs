        // Get authentication token function
        function getAuthToken() {
            // Try meta tag first
            const metaToken = document.querySelector('meta[name="auth-token"]')?.content;
            if (metaToken) return metaToken;
            
            // Try localStorage
            return localStorage.getItem('token');
        }

        // Show custom upload confirmation modal
        function showUploadConfirmationModal(file, fileInput) {
            // Create custom modal
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 z-50 bg-black bg-opacity-50 flex items-center justify-center p-4';
            modal.innerHTML = `
                <div class="bg-white dark:bg-gray-800 rounded-lg max-w-md w-full shadow-xl">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Update Profile Picture</h3>
