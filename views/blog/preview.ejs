<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preview: <%= post.title %> | Arzani</title>
    <meta name="robots" content="noindex, nofollow">
    
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">
    <link rel="stylesheet" href="/css/modern.css">
    <link rel="stylesheet" href="/css/blog.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#316FD4',
                        dark: '#141414',
                        'dark-light': '#1E1E1E'
                    },
                    fontFamily: {
                        'sans': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white text-gray-900 font-sans">
    <div class="page-wrapper">
       
        <%- include('../partials/navbar') %>

        <!-- Preview Banner -->
        <div class="fixed top-20 left-0 right-0 bg-yellow-500 text-white py-2 text-center z-40">
            <strong>Preview Mode:</strong> This is a preview of an unpublished article. 
            <% if (post.status === 'Draft') { %>
                <span class="ml-2 px-2 py-0.5 bg-gray-700 rounded text-xs">Draft</span>
            <% } else if (post.status === 'Pending') { %>
                <span class="ml-2 px-2 py-0.5 bg-orange-600 rounded text-xs">Pending</span>
            <% } else if (post.status === 'Approved') { %>
                <span class="ml-2 px-2 py-0.5 bg-green-600 rounded text-xs">Approved</span>
            <% } %>
        </div>

        <!-- Blog Post Header with Hero Image -->
        <section class="relative pt-36 md:pt-40 pb-10 md:pb-16 bg-primary bg-opacity-5">
            <!-- ...existing post header code... -->
        </section>
        
        <!-- Blog Post Content -->
        <section class="py-12 md:py-16 bg-white">
            <!-- ...existing post content code... -->
        </section>
        
        <%- include('../partials/footer') %>
    </div>

    <script src="/js/navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add sticky header on scroll
            const header = document.querySelector('header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled', 'bg-dark/80', 'backdrop-blur-md', 'border-b', 'border-gray-800');
                } else {
                    header.classList.remove('scrolled', 'bg-dark/80', 'backdrop-blur-md', 'border-b', 'border-gray-800');
                }
            });
            
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', function() {
                    const expanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !expanded);
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
</body>
</html>
