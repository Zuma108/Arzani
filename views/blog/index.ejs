    <script src="/js/navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all modern features
            initializeNavbarEffects();
            initializeMobileMenu();
            initializeScrollProgress();
            initializeSearchAndFilters();
            initializeAnimations();
            initializeEnhancedFeatures();
        });

        // Enhanced Navbar Scroll Effects
        function initializeNavbarEffects() {
            const navbar = document.getElementById('navbar');
            if (!navbar) return;
            
            let lastScrollY = window.scrollY;
            
            function updateNavbar() {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
                
                lastScrollY = currentScrollY;
            }
            
            window.addEventListener('scroll', updateNavbar, { passive: true });
        }
        
        // Mobile Menu Toggle
        function initializeMobileMenu() {
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', function() {
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    
                    if (isExpanded) {
                        mobileMenu.style.opacity = '0';
                        mobileMenu.style.transform = 'translateY(-10px)';
                        setTimeout(() => {
                            mobileMenu.classList.add('hidden');
                        }, 200);
                        this.setAttribute('aria-expanded', 'false');
                    } else {
                        mobileMenu.classList.remove('hidden');
                        mobileMenu.style.opacity = '0';
                        mobileMenu.style.transform = 'translateY(-10px)';
                        setTimeout(() => {
                            mobileMenu.style.opacity = '1';
                            mobileMenu.style.transform = 'translateY(0)';
                        }, 10);
                        this.setAttribute('aria-expanded', 'true');
                    }
                    
                    // Animate button
                    const svg = this.querySelector('svg');
                    if (svg) {
                        svg.style.transform = isExpanded ? 'rotate(0deg)' : 'rotate(90deg)';
                    }
                });
            }
        }
        
        // Reading Progress Bar
        function initializeScrollProgress() {
            const progressBar = document.getElementById('readingProgress');
            if (!progressBar) return;
            
            function updateProgress() {
                const scrolled = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
                progressBar.style.width = `${Math.min(scrolled, 100)}%`;
            }
            
            window.addEventListener('scroll', updateProgress, { passive: true });
        }

        // Search and Filter Functionality
        function initializeSearchAndFilters() {
            // Enhanced filter functionality with smooth transitions
            const categoryFilter = document.getElementById('categoryFilter');
            const sortFilter = document.getElementById('sortFilter');
            const blogGrid = document.querySelector('.grid');
            
            if (categoryFilter) {
                categoryFilter.addEventListener('change', function() {
                    // Add loading state
                    if (blogGrid) {
                        blogGrid.style.opacity = '0.5';
                        blogGrid.style.transform = 'scale(0.98)';
                    }
                    
                    setTimeout(() => {
                        if (this.value) {
                            window.location.href = '/blog/category/' + this.value;
                        } else {
                            window.location.href = '/blog';
                        }
                    }, 200);
                });
            }
            
            if (sortFilter) {
                sortFilter.addEventListener('change', function() {
                    // Add loading state
                    if (blogGrid) {
                        blogGrid.style.opacity = '0.5';
                        blogGrid.style.transform = 'scale(0.98)';
                    }
                    
                    setTimeout(() => {
                        const searchParams = new URLSearchParams(window.location.search);
                        searchParams.set('sort', this.value);
                        window.location.href = window.location.pathname + '?' + searchParams.toString();
                    }, 200);
                });
                
                // Set current sort in dropdown
                const currentSort = new URLSearchParams(window.location.search).get('sort');
                if (currentSort) {
                    sortFilter.value = currentSort;
                }
            }
            
            // Enhanced search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                let searchTimeout;
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    const searchTerm = this.value.trim();
                    
                    if (searchTerm.length > 2) {
                        searchTimeout = setTimeout(() => {
                            // Visual feedback
                            this.style.borderColor = '#3B82F6';
                            this.style.boxShadow = '0 0 0 3px rgba(59, 130, 246, 0.1)';
                        }, 300);
                    } else {
                        this.style.borderColor = '';
                        this.style.boxShadow = '';
                    }
                });
            }
        }

        // Animation Initialization
        function initializeAnimations() {
            // Animate elements on scroll (Intersection Observer)
            const animatedElements = document.querySelectorAll('.animate-fade-in-up');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const delay = entry.target.dataset.delay || 0;
                        setTimeout(() => {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, delay * 1000);
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            
            animatedElements.forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                observer.observe(el);
            });
            
            // Parallax effect for hero background
            const heroSection = document.querySelector('.hero-section');
            if (heroSection) {
                window.addEventListener('scroll', () => {
                    const scrolled = window.pageYOffset;
                    const rate = scrolled * -0.5;
                    heroSection.style.transform = `translateY(${rate}px)`;
                });
            }
            
            // Add smooth hover effects to cards
            const cards = document.querySelectorAll('.card-hover');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        }

        // Enhanced Features
        function initializeEnhancedFeatures() {
            // Enhanced newsletter form handling
            const newsletterForm = document.querySelector('form[action*="newsletter"]');
            if (newsletterForm) {
                newsletterForm.addEventListener('submit', function(e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        const originalText = submitBtn.textContent;
                        submitBtn.textContent = 'Subscribing...';
                        submitBtn.disabled = true;
                        
                        // Re-enable after form submission
                        setTimeout(() => {
                            submitBtn.textContent = originalText;
                            submitBtn.disabled = false;
                        }, 3000);
                    }
                });
            }
            
            // Initialize pagination functionality
            initializePagination();
            
            // Initialize category filtering
            initializeCategoryFiltering();
        }

        // Pagination Enhancement
        function initializePagination() {
            const paginationContainer = document.querySelector('.glass-card');
            if (!paginationContainer) return;
            
            // Add smooth transition for page changes
            const pageLinks = document.querySelectorAll('a[href*="page="]');
            pageLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Add loading state
                    const blogGrid = document.querySelector('.grid');
                    if (blogGrid) {
                        blogGrid.style.opacity = '0.6';
                        blogGrid.style.transform = 'scale(0.98)';
                        blogGrid.style.transition = 'all 0.3s ease';
                    }
                    
                    // Show loading indicator
                    const loadingOverlay = document.createElement('div');
                    loadingOverlay.className = 'fixed inset-0 bg-white/80 backdrop-blur-sm z-50 flex items-center justify-center';
                    loadingOverlay.innerHTML = `
                        <div class="glass-card p-6 rounded-2xl">
                            <div class="flex items-center space-x-3">
                                <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                                <span class="text-gray-700 font-medium">Loading articles...</span>
                            </div>
                        </div>
                    `;
                    document.body.appendChild(loadingOverlay);
                    
                    // Navigate after brief delay
                    setTimeout(() => {
                        window.location.href = this.href;
                    }, 300);
                });
            });
        }

        // Category Filtering Enhancement
        function initializeCategoryFiltering() {
            const categoryLinks = document.querySelectorAll('a[href*="/blog/category/"]');
            categoryLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // Add visual feedback
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
        }

        // Debug pagination state
        function debugPagination() {
            console.log('Pagination debug info:');
            console.log('Current page elements:', document.querySelectorAll('[href*="page="]').length);
            console.log('Page number buttons:', document.querySelectorAll('.w-10.h-10').length);
            
            const currentPageElement = document.querySelector('.bg-gradient-to-r.from-primary-500');
            if (currentPageElement) {
                console.log('Current page number:', currentPageElement.textContent.trim());
            } else {
                console.log('No current page element found');
            }
        }

        // Call debug function if in development mode
        if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
            setTimeout(debugPagination, 1000);
        }
    </script>
    
