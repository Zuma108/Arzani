                <!-- Publication Date -->
                <p class="blog-meta-text text-[#60758a] text-xs sm:text-sm font-normal leading-normal pb-3 pt-1 px-3 sm:px-4">
                    Published on <%= new Date(blog.publish_date || blog.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </p>
                  <!-- Hero Image -->
                <% if (blog.hero_image) { %>
                <div class="flex w-full grow bg-white @container py-2 sm:py-3 px-2 sm:px-0">
                    <div class="w-full gap-1 overflow-hidden bg-white @[480px]:gap-2 aspect-[16/9] sm:aspect-[3/2] flex">
                        <div class="w-full bg-center bg-no-repeat bg-cover aspect-auto rounded-xl sm:rounded-2xl flex-1 shadow-lg sm:shadow-xl blog-card"
