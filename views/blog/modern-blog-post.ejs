                <% } %>                  <!-- Article Content -->
                <div class="p-3 sm:p-4 lg:p-6">
                    <div class="blog-content text-[#111418] text-base sm:text-lg font-normal leading-relaxed pb-4 pt-2">
                        <%- blog.content %>
                    </div>
                </div>                  <!-- Newsletter Signup -->
                <div class="p-3 sm:p-4 lg:p-6">
                    <% const source = 'modern-blog-post'; %>
                    <%- include('../partials/newsletter', { source: source }) %>
                </div>                  <!-- Tags -->
                <div class="flex gap-2 sm:gap-3 p-3 sm:p-4 lg:p-6 flex-wrap">
                    <% if (typeof tags !== 'undefined' && tags && tags.length > 0) { %>
                        <% tags.forEach(tag => { %>
                            <div class="blog-tag flex h-8 sm:h-10 shrink-0 items-center justify-center gap-x-2 px-3 sm:px-4">
                                <p class="text-[#111418] text-xs sm:text-sm font-medium leading-normal">
                                    <a href="/blog/tag/<%= tag.slug %>" class="hover:text-white transition-colors">
                                        #<%= tag.name %>
                                    </a>
                                </p>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="blog-tag flex h-8 sm:h-10 shrink-0 items-center justify-center gap-x-2 px-3 sm:px-4">
                            <p class="text-[#111418] text-xs sm:text-sm font-medium leading-normal">#AI Trends</p>
                        </div>
                        <div class="blog-tag flex h-8 sm:h-10 shrink-0 items-center justify-center gap-x-2 px-3 sm:px-4">
                            <p class="text-[#111418] text-xs sm:text-sm font-medium leading-normal">#Future Tech</p>
                        </div>
                        <div class="blog-tag flex h-8 sm:h-10 shrink-0 items-center justify-center gap-x-2 px-3 sm:px-4">
                            <p class="text-[#111418] text-xs sm:text-sm font-medium leading-normal">#Innovation</p>
                        </div>
                    <% } %>
                </div>                <!-- Interaction Buttons -->
                <div class="flex flex-wrap gap-3 sm:gap-4 lg:gap-6 px-3 sm:px-4 lg:px-6 py-3 sm:py-4 justify-center bg-white/50 rounded-xl sm:rounded-2xl mx-3 sm:mx-4 lg:mx-6 backdrop-blur-sm">
                    <div class="blog-interactive flex items-center justify-center gap-2 sm:gap-3 px-3 sm:px-4 lg:px-6 py-2 sm:py-3 rounded-lg sm:rounded-xl cursor-pointer min-h-[44px]" id="like-button">
                        <div class="text-[#60758a]" data-icon="Heart" data-size="20px" data-weight="regular">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256" class="sm:w-6 sm:h-6">
                                <path d="M178,32c-20.65,0-38.73,8.88-50,23.89C116.73,40.88,98.65,32,78,32A62.07,62.07,0,0,0,16,94c0,70,103.79,126.66,108.21,129a8,8,0,0,0,7.58,0C136.21,220.66,240,164,240,94A62.07,62.07,0,0,0,178,32ZM128,206.8C109.74,196.16,32,147.69,32,94A46.06,46.06,0,0,1,78,48c19.45,0,35.78,10.36,42.6,27a8,8,0,0,0,14.8,0c6.82-16.67,23.15-27,42.6-27a46.06,46.06,0,0,1,46,46C224,147.61,146.24,196.15,128,206.8Z"></path>
                            </svg>
                        </div>
                        <p class="text-[#60758a] text-xs sm:text-sm font-bold leading-normal tracking-[0.015em]" id="like-count">125</p>
                    </div>                    <div class="blog-interactive flex items-center justify-center gap-2 sm:gap-3 px-3 sm:px-4 lg:px-6 py-2 sm:py-3 rounded-lg sm:rounded-xl cursor-pointer min-h-[44px]" id="bookmark-button">
                        <div class="text-[#60758a]" data-icon="Bookmark" data-size="20px" data-weight="regular">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256" class="sm:w-6 sm:h-6">
                                <path d="M184,32H72A16,16,0,0,0,56,48V224a8,8,0,0,0,12.24,6.78L128,193.43l59.77,37.35A8,8,0,0,0,200,224V48A16,16,0,0,0,184,32Zm0,16V161.57l-51.77-32.35a8,8,0,0,0-8.48,0L72,161.56V48ZM132.23,177.22a8,8,0,0,0-8.48,0L72,209.57V180.43l56-35,56,35v29.14Z"></path>
                            </svg>
                        </div>
                        <p class="text-[#60758a] text-xs sm:text-sm font-bold leading-normal tracking-[0.015em]" id="bookmark-count">28</p>
                    </div>
                </div>                  <!-- Share Button -->
                <div class="flex justify-center overflow-hidden px-3 sm:px-4 lg:px-6 pb-6 sm:pb-8">
                    <button class="blog-button flex max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl sm:rounded-2xl h-12 sm:h-14 lg:h-16 text-white text-sm sm:text-base lg:text-lg font-bold leading-normal tracking-[0.015em] min-w-0 px-4 sm:px-6 lg:px-8 gap-2 sm:gap-3 lg:gap-4 min-h-[44px]" 
                            id="share-button">
                        <div class="text-white" data-icon="Share" data-size="24px" data-weight="regular">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" fill="currentColor" viewBox="0 0 256 256" class="sm:w-6 sm:h-6 lg:w-7 lg:h-7">
                                <path d="M229.66,109.66l-48,48a8,8,0,0,1-11.32-11.32L204.69,112H165a88,88,0,0,0-85.23,66,8,8,0,0,1-15.5-4A103.94,103.94,0,0,1,165,96h39.71L170.34,61.66a8,8,0,0,1,11.32-11.32l48,48A8,8,0,0,1,229.66,109.66ZM192,208H40V88a8,8,0,0,0-16,0V208a16,16,0,0,0,16,16H192a8,8,0,0,0,0-16Z"></path>
                            </svg>
                        </div>
                        <span class="truncate">Share This Article</span>
                    </button>
