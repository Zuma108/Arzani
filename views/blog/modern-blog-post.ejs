            transition: none !important;
            animation: none !important;
            filter: none !important;
            opacity: 1 !important;
            box-shadow: none !important;
            scale: 1 !important;
        }

        /* Ensure logo container is also static */
        .blog-header .h-12.w-auto {
            transform: none !important;
            transition: none !important;
            animation: none !important;
            position: static !important;
        }

        .blog-header .h-12.w-auto:hover,
        .blog-header .h-12.w-auto:focus,
        .blog-header .h-12.w-auto:active {
            transform: none !important;
            transition: none !important;
            animation: none !important;
            box-shadow: none !important;
            scale: 1 !important;
        }

        /* Override any global animations that might affect the logo */
        .blog-header img[alt="Arzani Logo"], 
        .blog-header img[alt="Arzani Logo"] * {
            animation-name: none !important;
            animation-duration: 0s !important;
            animation-iteration-count: 1 !important;
            animation-play-state: paused !important;
        }
    </style>
    
