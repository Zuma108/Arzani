    <script>
        // Initialize particles.js if available and element exists
        if (typeof particlesJS !== 'undefined' && document.getElementById('particles-js')) {
            particlesJS('particles-js', { /* options */ });
        }
        // Initialize scroll animations
        document.addEventListener('DOMContentLoaded', () => {
            initializeScrollAnimations();
        });

        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contactForm');
            const submitBtn = document.getElementById('submitBtn');
            const formStatus = document.getElementById('formStatus');
            
            if (contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Change button state
                    submitBtn.disabled = true;
                    submitBtn.innerText = 'Sending...';
                    
                    // Get form data
                    const formData = new FormData(contactForm);
                    const formObject = Object.fromEntries(formData.entries());
                    
                    // Send form data via fetch
                    fetch('/api/contact', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formObject)
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Show success message
                            formStatus.innerText = 'Thank you! Your message has been sent successfully.';
                            formStatus.className = 'mt-3 text-center text-green-400 text-sm';
                            contactForm.reset();
                        } else {
                            // Show error message
                            formStatus.innerText = data.message || 'There was a problem sending your message. Please try again.';
                            formStatus.className = 'mt-3 text-center text-red-400 text-sm';
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        formStatus.innerText = 'There was a problem sending your message. Please try again.';
                        formStatus.className = 'mt-3 text-center text-red-400 text-sm';
                    })
                    .finally(() => {
                        submitBtn.disabled = false;
                        submitBtn.innerText = 'Send Message';
                        formStatus.classList.remove('hidden');
                    });
                });
            }
        });
    </script>

