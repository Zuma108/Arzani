<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Questionnaire - Growth Projections | Arzani Marketplace</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <%- include('../views/partials/tailwind-setup') %>
    <link rel="stylesheet" href="/css/seller-questionnaire.css">
    <link rel="stylesheet" href="/css/progress-bar.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: white;
            overflow: hidden; /* Hide scrollbar */
        }
        .header {
            height: 87px;
            border-bottom: 0.8px solid #bfbcc6;
        }
        .content-container {
            height: calc(100vh - 87px - 100px); /* Header height (87px) and footer height (100px) */
            overflow-y: auto; /* Enable scrolling inside container if needed */
            padding-bottom: 20px;
        }
        .btn-main {
            background-color: #25224a;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-next {
            background-color: #041b76;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
            box-shadow: 7px 7px 17px 0px rgba(25,31,64,0.22);
        }
        .progress-bar {
            background-color: #dee8ff;
            height: 10px;
        }
        .progress-active {
            background-color: #3e50f7;
        }
        .exit-link {
            color: #25224a;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .profile-pics {
            display: flex;
            align-items: center;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
        }
        .profile-pic:not(:first-child) {
            margin-left: -15px;
        }
        .growth-option {
            border: 2px solid #bfbcc6;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }
        .growth-option:hover {
            border-color: #3e50f7;
            background-color: rgba(62, 80, 247, 0.05);
        }
        .growth-option.selected {
            border-color: #3e50f7;
            background-color: rgba(62, 80, 247, 0.1);
        }
    </style>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W50GKB6F3M"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-W50GKB6F3M');
    </script>
</head>

<body>
    <div class="w-full h-screen flex flex-col bg-white">
        <!-- Header -->
        <header class="header w-full bg-white flex items-center flex-shrink-0">
            <div class="container mx-auto px-4 md:px-8 flex items-center justify-between">
                <!-- Logo -->
                <div class="h-12 md:h-16">
                    <img src="/figma design exports/logos/Arzani black-white background 2.png" alt="Arzani" class="h-full">
                </div>
                
                <!-- Right section -->
                <div class="flex items-center gap-4">
                    <!-- Help button -->
                    <div class="hidden md:flex mr-4 h-12 px-6 items-center border border-[#bfbcc6] rounded">
                        <span class="text-[#464154] text-base font-medium">Need help?</span>
                    </div>
                    
                    <!-- Profile pictures -->
                    <div class="profile-pics mr-4">
                        <img src="https://randomuser.me/api/portraits/women/32.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="Support agent" class="profile-pic">
                    </div>
                    
                    <!-- Exit link -->
                    <a href="/" class="exit-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span class="hidden sm:inline">Exit</span>
                    </a>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="content-container flex-grow page-transition">
            <div class="container mx-auto px-4 max-w-2xl pt-8 md:pt-12">
                <h1 class="text-[#25224a] text-2xl md:text-3xl font-black mb-4 text-center">What's your growth forecast?</h1>
                <p class="text-[#5f5770] text-lg mb-8 text-center">Help potential buyers understand your business's future potential.</p>
                
                <!-- Growth Projection Form -->
                <div class="mt-8">
                    <div class="mb-6">
                        <label for="projectedGrowthRate" class="block text-[#25224a] text-lg font-medium mb-2">Projected Annual Growth Rate (%)</label>
                        <div class="relative">
                            <input 
                                type="number" 
                                id="projectedGrowthRate" 
                                name="projectedGrowthRate" 
                                min="-100" 
                                max="1000"
                                step="0.1"
                                class="w-full pl-4 pr-10 py-4 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7] text-lg" 
                                placeholder="e.g. 15"
                            >
                            <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none">
                                <span class="text-gray-500 text-lg">%</span>
                            </div>
                        </div>
                        <div id="growthError" class="text-red-500 text-left hidden mt-2">Please enter your projected growth rate</div>
                        <div class="text-[#5f5770] text-sm mt-2">Enter your expected annual revenue growth rate</div>
                    </div>
                    
                    <!-- Growth Areas -->
                    <div class="mt-8">
                        <label for="growthAreas" class="block text-[#25224a] text-lg font-medium mb-2">Growth Opportunities</label>
                        <textarea 
                            id="growthAreas" 
                            name="growthAreas" 
                            rows="3" 
                            class="w-full px-4 py-3 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" 
                            placeholder="Describe potential growth areas and opportunities for your business..."
                        ></textarea>
                        <div class="text-[#5f5770] text-sm mt-2">Examples: new markets, product lines, partnerships, etc.</div>
                    </div>
                    
                    <!-- Growth Challenges -->
                    <div class="mt-6">
                        <label for="growthChallenges" class="block text-[#25224a] text-lg font-medium mb-2">Growth Challenges (optional)</label>
                        <textarea 
                            id="growthChallenges" 
                            name="growthChallenges" 
                            rows="2" 
                            class="w-full px-4 py-3 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" 
                            placeholder="Describe any challenges to growth..."
                        ></textarea>
                        <div class="text-[#5f5770] text-sm mt-2">Being transparent about challenges builds trust with potential buyers</div>
                    </div>
                    
                    <!-- Scalability Assessment -->
                    <div class="mt-8">
                        <label class="block text-[#25224a] text-lg font-medium mb-3">How scalable is your business?</label>
                        <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                            <div class="growth-option p-4 cursor-pointer" data-value="Low">
                                <h4 class="text-[#25224a] font-medium">Low Scalability</h4>
                                <p class="text-[#5f5770] text-sm">Growth requires significant investment</p>
                            </div>
                            <div class="growth-option p-4 cursor-pointer" data-value="Medium">
                                <h4 class="text-[#25224a] font-medium">Medium Scalability</h4>
                                <p class="text-[#5f5770] text-sm">Can scale with moderate investment</p>
                            </div>
                            <div class="growth-option p-4 cursor-pointer" data-value="High">
                                <h4 class="text-[#25224a] font-medium">High Scalability</h4>
                                <p class="text-[#5f5770] text-sm">Can scale rapidly with minimal investment</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Footer progress bar - Updated to match other pages -->
        <footer class="w-full bg-white flex-shrink-0">
            <!-- Progress bar system -->
            <div class="container mx-auto px-4 md:px-20 py-2">
                <div class="progress-status">
                    <div class="current-page">Growth Projections</div>
                    <div class="pages-count">Step 9 of 11</div>
                </div>
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-active step-9-of-11" style="width: 81.82%;"></div>
                    </div>
                </div>
                <div class="step-indicators">
                    <% for(let i = 1; i <= 11; i++) { %>
                        <div class="step-dot <%= i < 9 ? 'completed' : (i === 9 ? 'active' : '') %>" data-step="<%= i %>"></div>
                    <% } %>
                </div>
            </div>
            
                        
            <div class="container mx-auto px-4 md:px-20 py-6 md:py-8 pb-10 sm:pb-8 flex justify-between items-center">
                <button id="backBtn" class="text-[#25224a] text-base font-medium">Back</button>
                <button id="nextBtn" class="btn-next px-6 md:px-8 py-3 md:py-4 text-white text-base font-medium">Next</button>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/js/questionnaire-navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Proper page initialization
            const mainContent = document.querySelector('main');
            
            // Force browser to recognize the element before animation
            mainContent.style.opacity = '0';
            
            // Trigger reflow to ensure animation works
            void mainContent.offsetWidth;
            
            // Start animation
            mainContent.classList.add('page-transition');
            setTimeout(() => {
                mainContent.style.opacity = '1';
            }, 10);
            
            // Set up growth input fields and error handling
            const projectedGrowthInput = document.getElementById('projectedGrowthRate');
            const growthAreasInput = document.getElementById('growthAreas');
            const growthChallengesInput = document.getElementById('growthChallenges');
            const growthError = document.getElementById('growthError');
            let selectedScalability = localStorage.getItem('sellerScalability') || '';
            
            // Load saved values if available
            if (localStorage.getItem('sellerGrowthRate')) {
                projectedGrowthInput.value = localStorage.getItem('sellerGrowthRate');
            }
            
            if (localStorage.getItem('sellerGrowthAreas')) {
                growthAreasInput.value = localStorage.getItem('sellerGrowthAreas');
            }
            
            if (localStorage.getItem('sellerGrowthChallenges')) {
                growthChallengesInput.value = localStorage.getItem('sellerGrowthChallenges');
            }
            
            // Set up scalability options
            const growthOptions = document.querySelectorAll('.growth-option');
            
            // Pre-select option if saved
            if (selectedScalability) {
                growthOptions.forEach(option => {
                    if (option.getAttribute('data-value') === selectedScalability) {
                        option.classList.add('selected');
                    }
                });
            }
            
            // Add click handlers for growth options
            growthOptions.forEach(option => {
                option.addEventListener('click', function() {
                    // Remove selected class from all options
                    growthOptions.forEach(opt => opt.classList.remove('selected'));
                    
                    // Add selected class to clicked option
                    this.classList.add('selected');
                    
                    // Save selected value
                    selectedScalability = this.getAttribute('data-value');
                });
            });
            
            // Input validation
            projectedGrowthInput.addEventListener('input', function() {
                if (this.value) {
                    growthError.classList.add('hidden');
                    this.classList.remove('border-red-500');
                }
            });
            
            // Set up validation function for navigation
            window.validateBeforeNext = function() {
                // Check if a value has been entered
                if (!projectedGrowthInput.value) {
                    // Show error
                    growthError.classList.remove('hidden');
                    projectedGrowthInput.classList.add('border-red-500');
                    projectedGrowthInput.focus();
                    return false;
                }
                
                // Save all inputs to localStorage
                localStorage.setItem('sellerGrowthRate', projectedGrowthInput.value);
                localStorage.setItem('sellerGrowthAreas', growthAreasInput.value);
                localStorage.setItem('sellerGrowthChallenges', growthChallengesInput.value);
                localStorage.setItem('sellerScalability', selectedScalability);
                
                return true;
            };
            
            // Form navigation - FIXED navigation links and removed animations that were causing issues
            const backBtn = document.getElementById('backBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            if (backBtn) {
                backBtn.addEventListener('click', function() {
                    // Save data before navigating
                    localStorage.setItem('sellerGrowthRate', projectedGrowthInput.value);
                    localStorage.setItem('sellerGrowthAreas', growthAreasInput.value);
                    localStorage.setItem('sellerGrowthChallenges', growthChallengesInput.value);
                    localStorage.setItem('sellerScalability', selectedScalability);
                    
                    // Navigate to previous page
                    window.location.href = '/seller-questionnaire/ffe';
                });
            }
            
            if (nextBtn) {
                nextBtn.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevent default behavior
                    console.log('Next button clicked');
                    
                    // Validate inputs
                    if (!projectedGrowthInput.value) {
                        growthError.classList.remove('hidden');
                        projectedGrowthInput.classList.add('border-red-500');
                        projectedGrowthInput.focus();
                        return false;
                    }
                    
                    // Save all inputs to localStorage
                    localStorage.setItem('sellerGrowthRate', projectedGrowthInput.value);
                    localStorage.setItem('sellerGrowthAreas', growthAreasInput.value || '');
                    localStorage.setItem('sellerGrowthChallenges', growthChallengesInput.value || '');
                    localStorage.setItem('sellerScalability', selectedScalability || 'Medium');
                    
                    console.log('Data saved, navigating to debts page');
                    
                    // Navigate directly to debts page - simplified navigation to avoid issues
                    window.location.href = '/seller-questionnaire/debts';
                });
            } else {
                console.error('Next button not found on growth page');
            }
            
            // Add direct event listener to Next button with animation
            if (nextBtn) {
                nextBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Next button clicked on growth page');
                    
                    // Validate inputs
                    if (!projectedGrowthInput.value) {
                        growthError.classList.remove('hidden');
                        projectedGrowthInput.classList.add('border-red-500');
                        projectedGrowthInput.focus();
                        return false;
                    }
                    
                    // Save all inputs to localStorage
                    localStorage.setItem('sellerGrowthRate', projectedGrowthInput.value);
                    localStorage.setItem('sellerGrowthAreas', growthAreasInput.value || '');
                    localStorage.setItem('sellerGrowthChallenges', growthChallengesInput.value || '');
                    localStorage.setItem('sellerScalability', selectedScalability || 'Medium');
                    
                    // Add exit animation
                    mainContent.style.transition = 'opacity 0.3s ease-out';
                    mainContent.style.opacity = '0';
                    
                    // Animate progress bar
                    const progressActive = document.querySelector('.progress-active');
                    if (progressActive) {
                        progressActive.style.transition = 'width 0.4s ease-out';
                        progressActive.style.width = '90.91%'; // Next step percentage
                    }
                    
                    // Update step indicators
                    const currentDot = document.querySelector('.step-dot[data-step="9"]');
                    const nextDot = document.querySelector('.step-dot[data-step="10"]');
                    if (currentDot && nextDot) {
                        currentDot.classList.remove('active');
                        currentDot.classList.add('completed');
                        nextDot.classList.add('active');
                    }
                    
                    // Navigate after animation completes
                    setTimeout(() => {
                        window.location.href = '/seller-questionnaire/debts';
                    }, 300);
                }, true);
            }
            
            // Add direct event listener to Back button with animation
            if (backBtn) {
                backBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Save data before navigating
                    localStorage.setItem('sellerGrowthRate', projectedGrowthInput.value || '');
                    localStorage.setItem('sellerGrowthAreas', growthAreasInput.value || '');
                    localStorage.setItem('sellerGrowthChallenges', growthChallengesInput.value || '');
                    localStorage.setItem('sellerScalability', selectedScalability || 'Medium');
                    
                    // Add exit animation
                    mainContent.style.transition = 'opacity 0.3s ease-out';
                    mainContent.style.opacity = '0';
                    
                    // Animate progress bar
                    const progressActive = document.querySelector('.progress-active');
                    if (progressActive) {
                        progressActive.style.transition = 'width 0.4s ease-out';
                        progressActive.style.width = '72.73%'; // Previous step percentage
                    }
                    
                    // Update step indicators
                    const currentDot = document.querySelector('.step-dot[data-step="9"]');
                    const prevDot = document.querySelector('.step-dot[data-step="8"]');
                    if (currentDot && prevDot) {
                        currentDot.classList.remove('active');
                        prevDot.classList.remove('completed');
                        prevDot.classList.add('active');
                    }
                    
                    // Navigate after animation completes
                    setTimeout(() => {
                        window.location.href = '/seller-questionnaire/ffe';
                    }, 300);
                }, true);
            }
        });
    </script>
</body>
</html>
