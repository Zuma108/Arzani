<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Gold Plan Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #FFD700;
            --gold-secondary: #FDB931;
            --gold-gradient: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
        }

        .checkout-container {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
            margin-top: 3rem;
            overflow: hidden;
        }

        .header-banner {
            background: var(--gold-gradient);
            padding: 2rem;
            text-align: center;
            color: #2a2a2a;
        }

        .plan-badge {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 2rem;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: inline-block;
        }

        .feature-item {
            padding: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .feature-icon {
            width: 24px;
            height: 24px;
            color: var(--gold-secondary);
        }

        .payment-section {
            background: #f8f9fa;
            padding: 2rem;
            border-radius: 0 0 1rem 1rem;
        }

        #payment-element {
            margin: 2rem 0;
        }

        .submit-button {
            background: var(--gold-gradient);
            border: none;
            color: #2a2a2a;
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 0.5rem;
            width: 100%;
            transition: transform 0.2s;
        }

        .submit-button:hover {
            transform: translateY(-2px);
        }

        .submit-button:disabled {
            opacity: 0.7;
            transform: none;
        }

        .price-tag {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2a2a2a;
        }

        .price-period {
            font-size: 1rem;
            color: #666;
        }

        .guarantee-badge {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-top: 1rem;
            font-size: 0.9rem;
            text-align: center;
        }
    </style>
    <!-- Move Stripe.js to head and remove async -->
    <script src="https://js.stripe.com/v3/"></script>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="checkout-container">
                    <div class="header-banner">
                        <span class="plan-badge">Gold Plan</span>
                        <h1 class="display-6 mb-3">Premium Business Access</h1>
                        <div class="price-tag">
                            Â£39 <span class="price-period">/month</span>
                        </div>
                    </div>

                    <div class="p-4">
                        <div class="features">
                            <div class="feature-item">
                                <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                                </svg>
                                <div>
                                    <h5 class="mb-0">Full Database Access</h5>
                                    <small class="text-muted">Search through our complete database</small>
                                </div>
                            </div>
                            <!-- Add more features -->
                        </div>

                        <div class="payment-section">
                            <h4 class="mb-4">Payment Details</h4>
                            <form id="payment-form">
                                <div id="payment-element"></div>
                                <button id="submit-button" class="submit-button">
                                    Subscribe Now
                                </button>
                                <div id="error-message" class="text-danger mt-3"></div>
                            </form>
                            <div class="guarantee-badge">
                                <svg class="feature-icon mb-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                                </svg>
                                <div>30-Day Money-Back Guarantee</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Wait for Stripe.js to be fully loaded
        let stripeInstance = null;
        let paymentElement = null;

        // Initialize on DOM load
        document.addEventListener('DOMContentLoaded', function() {
            // Check if Stripe.js is loaded
            if (typeof Stripe === 'undefined') {
                console.error('Stripe.js not loaded');
                document.getElementById('error-message').textContent = 
                    'Payment system failed to load. Please refresh the page.';
                return;
            }

            // Initialize Stripe
            stripeInstance = Stripe('<%= stripePublishableKey %>');
            initializePayment();
        });

        // Separate initialization function
        async function initializePayment() {
            try {
                const response = await fetch("/payment/create-checkout-session", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": `Bearer ${localStorage.getItem('token')}`
                    },
                    body: JSON.stringify({ 
                        plan: '<%= locals.plan || "gold" %>'
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to create payment session');
                }

                const { clientSecret } = await response.json();
                
                if (!clientSecret) {
                    throw new Error('No client secret received');
                }

                const elements = stripeInstance.elements({
                    clientSecret,
                    appearance: {
                        theme: 'stripe',
                        variables: {
                            colorPrimary: '#FFD700',
                        }
                    }
                });

                paymentElement = elements.create('payment');
                paymentElement.mount('#payment-element');

                // Set up form handling
                setupFormHandler(elements);

            } catch (error) {
                console.error('Payment initialization error:', error);
                document.getElementById('error-message').textContent = 
                    'Failed to initialize payment system. Please try again.';
            }
        }

        function setupFormHandler(elements) {
            const form = document.getElementById('payment-form');
            const submitButton = document.getElementById('submit-button');
            const errorElement = document.getElementById('error-message');

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                submitButton.disabled = true;

                try {
                    const { error } = await stripeInstance.confirmPayment({
                        elements,
                        confirmParams: {
                            return_url: `${window.location.origin}/payment/success`
                        }
                    });

                    if (error) {
                        errorElement.textContent = error.message;
                        submitButton.disabled = false;
                    }
                } catch (e) {
                    console.error('Payment error:', e);
                    errorElement.textContent = 'An unexpected error occurred';
                    submitButton.disabled = false;
                }
            });
        }
    </script>
</body>
</html>
