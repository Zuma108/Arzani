    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Extract payment details from URL parameters
            const urlParams = new URLSearchParams(window.location.search);
            const paymentIntent = urlParams.get('payment_intent');
            const amount = urlParams.get('amount');
            
            // Update receipt with available information
            if (paymentIntent) {
                document.getElementById('transaction-id').textContent = paymentIntent;
            }
            
            if (amount) {
                // Convert amount from cents to pounds
                const amountInPounds = (parseInt(amount) / 100).toFixed(2);
                document.getElementById('transaction-amount').textContent = `Â£${amountInPounds}`;
            } else {
                document.getElementById('transaction-amount').textContent = 'Payment Confirmed';
            }
            
            // Store payment completion in localStorage for future reference
            localStorage.setItem('valuation_payment_complete', 'true');
            
            // Set a cookie to remember payment completion
            document.cookie = "valuation_payment_complete=true; path=/; max-age=2592000"; // 30 days
        });
    </script>
