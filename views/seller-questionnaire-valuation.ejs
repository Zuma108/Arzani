    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get DOM elements
            const calculateBtn = document.getElementById('calculateValuationBtn');
            const calculationPrompt = document.getElementById('calculationPrompt');
            const valuationResults = document.getElementById('valuationResults');
            const loadingOverlay = document.getElementById('loadingOverlay');
            const cancelValuationBtn = document.getElementById('cancelValuationBtn');
            const valuationErrorMessage = document.getElementById('valuationErrorMessage');
            const valuationErrorText = document.getElementById('valuationErrorText');
            const closeErrorBtn = document.getElementById('closeErrorBtn');
            const retryValuationBtn = document.getElementById('retryValuationBtn');
            
            // Track the active API request controller so we can abort it if needed
            let activeController = null;
            let safetyTimeoutId = null;
            
            // Add event listener for the cancel button
            if (cancelValuationBtn) {
                cancelValuationBtn.addEventListener('click', function() {
                    // Abort any ongoing fetch request
                    if (activeController) {
                        activeController.abort();
                        activeController = null;
                    }
                    
                    // Clear any pending safety timeout
                    if (safetyTimeoutId) {
                        clearTimeout(safetyTimeoutId);
                        safetyTimeoutId = null;
                    }
                    
                    // Hide the loading overlay
                    hideLoadingOverlay();
                    
                    console.log('Valuation calculation cancelled by user');
                });
            }
            
            // Event listeners for the error modal
            if (closeErrorBtn) {
                closeErrorBtn.addEventListener('click', function() {
                    hideErrorModal();
                });
            }
            
            if (retryValuationBtn) {
                retryValuationBtn.addEventListener('click', function() {
                    hideErrorModal();
                    calculateValuation();
                });
            }
            
            // Helper functions for showing/hiding overlays
            function showLoadingOverlay() {
                if (loadingOverlay) {
                    loadingOverlay.classList.remove('hidden');
                    loadingOverlay.style.display = 'flex'; // Ensure flex display for proper centering
                }
            }
            
            function hideLoadingOverlay() {
                if (loadingOverlay) {
                    loadingOverlay.classList.add('hidden');
                    setTimeout(() => {
                        loadingOverlay.style.display = 'none';
                    }, 300);
                } else {
                    // Fallback if the main reference is lost
                    document.querySelectorAll('.loading-overlay').forEach(overlay => {
                        overlay.classList.add('hidden');
                        setTimeout(() => {
                            overlay.style.display = 'none';
                        }, 300);
                    });
                }
            }
            
            function showErrorModal(errorMessage) {
                if (valuationErrorMessage && valuationErrorText) {
                    valuationErrorText.textContent = errorMessage || 'An error occurred while calculating your valuation. Please try again.';
                    valuationErrorMessage.classList.remove('hidden');
                    valuationErrorMessage.style.display = 'flex';
                } else {
                    // Fallback to alert if modal elements not found
                    alert('Valuation Error: ' + (errorMessage || 'An error occurred'));
                }
            }
            
            function hideErrorModal() {
                if (valuationErrorMessage) {
                    valuationErrorMessage.classList.add('hidden');
                    setTimeout(() => {
                        valuationErrorMessage.style.display = 'none';
                    }, 300);
                }
            }
            
            // Function to display error messages - use the modal instead of alert
            function displayError(message) {
                // Hide loading overlay
                hideLoadingOverlay();
                
                // Show error modal with message
                showErrorModal(message);
                
                console.error('Valuation calculation failed:', message);
            }
            
            // Add click handler for calculation button
            if (calculateBtn) {
                calculateBtn.textContent = 'Calculate My Business Value';
                calculateBtn.addEventListener('click', calculateValuation);
            } else {
                console.error('Calculate button not found!');
            }
            
            // Function to calculate the business valuation
            async function calculateValuation() {
                try {
                    // Show loading overlay
                    showLoadingOverlay();
                    
                    // Create a safety timeout to ensure loading overlay is never stuck
                    if (safetyTimeoutId) clearTimeout(safetyTimeoutId);
                    safetyTimeoutId = setTimeout(() => {
                        console.warn('Safety timeout triggered - forcing loading overlay to hide');
                        hideLoadingOverlay();
                        displayError('The calculation is taking longer than expected. Please try again.');
                        safetyTimeoutId = null;
                    }, 15000); // 15 seconds safety timeout
                    
                    // Gather business data from localStorage
                    const businessData = {
                        businessName: localStorage.getItem('sellerBusinessName'),
                        industry: localStorage.getItem('sellerIndustry'),
                        yearsInOperation: localStorage.getItem('sellerYearsInOperation') || 
                            (new Date().getFullYear() - parseInt(localStorage.getItem('sellerYearEstablished') || new Date().getFullYear())),
                        location: localStorage.getItem('sellerLocation'),
                        revenue: parseFloat(localStorage.getItem('sellerRevenueExact')) || 0,
                        revenuePrevYear: parseFloat(localStorage.getItem('sellerRevenuePrevYear')) || 0,
                        revenue2YearsAgo: parseFloat(localStorage.getItem('sellerRevenue2YearsAgo')) || 0,
                        revenue3YearsAgo: parseFloat(localStorage.getItem('sellerRevenue3YearsAgo')) || 0,
                        ebitda: parseFloat(localStorage.getItem('sellerEbitda')) || 0,
                        ebitdaPrevYear: parseFloat(localStorage.getItem('sellerEbitdaPrevYear')) || 0,
                        ebitda2YearsAgo: parseFloat(localStorage.getItem('sellerEbitda2YearsAgo')) || 0,
                        cashOnCash: parseFloat(localStorage.getItem('sellerCashOnCash')) || 0,
                        ffeValue: parseFloat(localStorage.getItem('sellerFfeValue')) || 0,
                        growthRate: parseFloat(localStorage.getItem('sellerGrowthRate')) || 0,
                        scalability: localStorage.getItem('sellerScalability') || 'Medium',
                        totalDebtAmount: parseFloat(localStorage.getItem('sellerTotalDebtAmount')) || 0,
                        debtTransferable: localStorage.getItem('sellerDebtTransferable') || 'none',
                        anonymousId: localStorage.getItem('questionnaireAnonymousId') || '',
                        email: localStorage.getItem('sellerEmail') || '',
                        timestamp: Date.now(), // Add timestamp to prevent caching issues
                        requestId: 'req_' + Date.now() + '_' + Math.random().toString(36).substring(2, 10) // Generate unique request ID
                    };
                    
                    console.log('Calculating valuation with data:', businessData);
                    
                    // Validate minimum required data
                    if (!businessData.revenue && !businessData.ebitda) {
                        throw new Error('Missing required financial data (revenue or EBITDA)');
                    }
                    
                    try {
                        // Create a new AbortController for this request
                        activeController = new AbortController();
                        const timeoutId = setTimeout(() => {
                            if (activeController) {
                                activeController.abort();
                            }
                        }, 10000); // 10 second timeout for API request
                        
                        // Send data to valuation API with timeout
                        const response = await fetch('/api/public/valuation/calculate?nocache=' + Date.now(), {
                            method: 'POST',
                            headers: { 
                                'Content-Type': 'application/json',
                                'Accept': 'application/json',
                                'Cache-Control': 'no-cache, no-store, must-revalidate',
                                'Pragma': 'no-cache',
                                'Expires': '0'
                            },
                            body: JSON.stringify(businessData),
                            signal: activeController.signal
                        });
                        
                        // Clear the timeout and reset controller reference
                        clearTimeout(timeoutId);
                        activeController = null;
                        
                        if (!response.ok) {
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                const errorData = await response.json();
                                throw new Error(`API error (${response.status}): ${errorData.message || 'Unknown error'}`);
                            } else {
                                const errorText = await response.text();
                                if (errorText.includes('<!DOCTYPE html>')) {
                                    throw new Error('Received HTML error page instead of JSON. Try the alternate endpoint.');
                                } else {
                                    throw new Error(`API error (${response.status}): ${errorText.substring(0, 100) || 'Unknown error'}`);
                                }
                            }
                        }
                        
                        const result = await response.json();
                        
                        if (result.success && result.valuation) {
                            // Clear safety timeout since we have a successful response
                            if (safetyTimeoutId) {
                                clearTimeout(safetyTimeoutId);
                                safetyTimeoutId = null;
                            }
                            
                            // Store the result and display it
                            window.valuationData = result.valuation;
                            displayValuationResults(result.valuation);
                        } else {
                            throw new Error(result.message || 'Failed to calculate valuation');
                        }
                    } catch (apiError) {
                        // Clear safety timeout
                        if (safetyTimeoutId) {
                            clearTimeout(safetyTimeoutId);
                            safetyTimeoutId = null;
                        }
                        
                        // Handle abort errors specifically
                        if (apiError.name === 'AbortError') {
                            displayError('The valuation request timed out. Please try again.');
                        } else {
                            // Try the fallback endpoint if we got an HTML response
                            if (apiError.message.includes('HTML error page') || apiError.message.includes('<!DOCTYPE html>')) {
                                try {
                                    console.log('Trying fallback valuation endpoint...');
                                    
                                    // Create a new controller for fallback request
                                    activeController = new AbortController();
                                    
                                    const fallbackResponse = await fetch('/api/business/public/calculate-valuation?nocache=' + Date.now(), {
                                        method: 'POST',
                                        headers: { 
                                            'Content-Type': 'application/json',
                                            'Accept': 'application/json',
                                            'Cache-Control': 'no-cache'
                                        },
                                        body: JSON.stringify(businessData),
                                        signal: activeController.signal
                                    });
                                    
                                    // Reset controller after request completes
                                    activeController = null;
                                    
                                    if (!fallbackResponse.ok) {
                                        throw new Error(`Fallback API error: ${fallbackResponse.status}`);
                                    }
                                    
                                    const fallbackResult = await fallbackResponse.json();
                                    if (fallbackResult.success && fallbackResult.valuation) {
                                        window.valuationData = fallbackResult.valuation;
                                        displayValuationResults(fallbackResult.valuation);
                                        return; // Exit early if successful
                                    } else {
                                        throw new Error(fallbackResult.message || 'Failed to calculate valuation with fallback endpoint');
                                    }
                                } catch (fallbackError) {
                                    console.error('Fallback endpoint failed:', fallbackError);
                                    displayError(`Both valuation endpoints failed. Please try again later.`);
                                }
                            } else {
                                displayError(apiError.message || 'Failed to connect to valuation service.');
                            }
                        }
                    }
                } catch (error) {
                    // Ensure overlay is hidden and clear safety timeout
                    if (safetyTimeoutId) {
                        clearTimeout(safetyTimeoutId);
                        safetyTimeoutId = null;
                    }
                    
                    hideLoadingOverlay();
                    displayError(error.message || 'An unexpected error occurred.');
                }
            }
            
            // Function to display the valuation results
            function displayValuationResults(valuation) {
                try {
                    // Store the valuation data globally
                    window.valuationData = valuation;
                    
                    // Update the UI with valuation data
                    updateValuationUI(valuation);
                    
                    // Save valuation results to database
                    saveValuationToDatabase(valuation).catch(err => {
                        // Just log the error but don't block UI update
                        console.warn('Error in database save, but continuing with UI update:', err);
                    });
                    
                    // Get element references
                    const calculationPrompt = document.getElementById('calculationPrompt');
                    const valuationResults = document.getElementById('valuationResults');
                    
                    // Check if all needed elements exist
                    if (!calculationPrompt || !valuationResults) {
                        console.error('Missing required DOM elements for displaying results');
                        displayError('Error displaying valuation results. Please try again.');
                        return;
                    }
                    
                    // Hide loading overlay
                    hideLoadingOverlay();
                    
                    // Hide calculation prompt and show results
                    calculationPrompt.classList.add('hidden');
                    valuationResults.classList.remove('hidden');
                    
                    // Scroll to results
                    valuationResults.scrollIntoView({ behavior: 'smooth' });
                    
                    console.log('Valuation displayed successfully');
                } catch (error) {
                    console.error('Error displaying valuation results:', error);
                    
                    // Fallback error handling
                    hideLoadingOverlay();
                    displayError('Error displaying valuation results: ' + error.message);
                }
            }
            
            // ... rest of the script code remains the same ...
        });
    </script>
