            // Add new function to initialize and handle the slider
            function initializeValuationSlider(estimatedValue, minValue, maxValue) {
                // Define all variables at the top to avoid accessing before initialization
                const sliderThumb = document.getElementById('sliderThumb');
                const sliderBar = document.querySelector('.slider-bar');
                const adjustedValue = document.getElementById('adjustedValue');
                const likelihoodLabel = document.getElementById('likelihoodLabel');
                const likelihoodText = document.getElementById('likelihoodText');
                const valueTooltip = document.getElementById('valueTooltip');
                
                // Calculate the range for the slider - use the exact valuation range provided
                const sliderMinValue = minValue;
                const sliderMaxValue = maxValue;
                
                // Set initial position to the estimated value or middle of the range if estimated value
                // is at an extreme, clamped to min/max range
                let initialValue;
                
                // Check if estimated value is near an extreme
                const range = sliderMaxValue - sliderMinValue;
                const lowerThreshold = sliderMinValue + (range * 0.25); // Lower 25% of range
                const upperThreshold = sliderMaxValue - (range * 0.25); // Upper 25% of range
                
                if (estimatedValue < lowerThreshold || estimatedValue > upperThreshold) {
                    // If estimated value is near an extreme, start in the middle
                    initialValue = sliderMinValue + (range / 2);
                } else {
                    // Otherwise use the estimated value
                    initialValue = estimatedValue;
                }
                
                // Ensure initial value is within range
                let currentValue = Math.max(sliderMinValue, Math.min(Math.round(initialValue), sliderMaxValue));
                let isDragging = false;
                
                // Format currency for display - define before using
                function formatCurrency(value) {
                    return '£' + parseInt(value).toLocaleString();
                }
                
                // Update function to set position and UI based on current value
                function updateSliderUI(value) {
                    // Ensure value stays within valid range
                    const clampedValue = Math.max(sliderMinValue, Math.min(value, sliderMaxValue));
                    
                    // Calculate percentage position along the slider
                    const range = sliderMaxValue - sliderMinValue;
                    const valuePercentage = ((clampedValue - sliderMinValue) / range) * 100;
                    
                    // Set thumb position
                    sliderThumb.style.left = `${valuePercentage}%`;
                    
                    // Update displayed value
                    adjustedValue.textContent = formatCurrency(clampedValue);
                    valueTooltip.textContent = formatCurrency(clampedValue);
                    
                    // Position tooltip
                    valueTooltip.style.left = `${valuePercentage}%`;
                    
                    // Update likelihood indicators
                    updateLikelihoodIndicator(clampedValue, estimatedValue);
                    
                    // Store actual value (clamped to valid range)
                    currentValue = clampedValue;
                    
                    // Debug output to see what's happening
                    console.log(`Slider update: value=${clampedValue}, estimated=${estimatedValue}, min=${sliderMinValue}, max=${sliderMaxValue}, percentage=${valuePercentage}%`);
                }
                
                // Function to update likelihood indicator based on value vs. estimated value
                function updateLikelihoodIndicator(value, estimatedValue) {
                    // Remove all classes
                    likelihoodLabel.classList.remove('likelihood-high', 'likelihood-moderate', 'likelihood-low');
                    
                    // Calculate how far from the estimated value we are
                    const ratio = value / estimatedValue;
                    
                    if (ratio < 0.85) {
                        // Value is significantly under estimated value
                        likelihoodLabel.classList.add('likelihood-high');
                        likelihoodLabel.textContent = 'High Likelihood';
                        likelihoodText.textContent = 'Your price is below market value, making it very attractive to potential buyers.';
                    } else if (ratio > 1.15) {
                        // Value is significantly over estimated value
                        likelihoodLabel.classList.add('likelihood-low');
                        likelihoodLabel.textContent = 'Low Likelihood';
                        likelihoodText.textContent = 'Your price is above market value, which may reduce the number of interested buyers.';
                    } else {
                        // Value is close to estimated value
                        likelihoodLabel.classList.add('likelihood-moderate');
                        likelihoodLabel.textContent = 'Moderate Likelihood';
                        likelihoodText.textContent = 'Your price is close to our estimated value, giving you a balanced chance of attracting buyers.';
                    }
                }
                
                // Update any related metrics when price changes
                function updateRelatedMetrics(value, estimatedValue) {
                    // Calculate price deviation as a percentage
                    const deviation = ((value - estimatedValue) / estimatedValue) * 100;
                    const deviationText = deviation >= 0 ? `+${deviation.toFixed(1)}%` : `${deviation.toFixed(1)}%`;
                    
                    // Here you could update other elements if needed
                    console.log(`Asking price set to ${formatCurrency(value)} (${deviationText} from estimate)`);
                }
                
                // Mouse down event on the thumb
                sliderThumb.addEventListener('mousedown', startDrag);
                sliderThumb.addEventListener('touchstart', startDrag);
                
                // Show tooltip on hover
                sliderThumb.addEventListener('mouseenter', () => {
                    valueTooltip.style.opacity = '1';
                });
                
                sliderThumb.addEventListener('mouseleave', () => {
                    if (!isDragging) {
                        valueTooltip.style.opacity = '0';
                    }
                });
                
                // Click on the bar to jump to that position
                sliderBar.addEventListener('click', function(e) {
                    const rect = sliderBar.getBoundingClientRect();
                    const clickX = e.clientX - rect.left;
                    const percentage = clickX / rect.width;
                    const newValue = sliderMinValue + (percentage * (sliderMaxValue - sliderMinValue));
                    
                    // Ensure new value is within range
                    const clampedValue = Math.max(sliderMinValue, Math.min(Math.round(newValue), sliderMaxValue));
                    currentValue = clampedValue;
                    updateSliderUI(currentValue);
                    
                    // Store the new asking price in localStorage when slider is clicked
                    localStorage.setItem('sellerAskingPrice', currentValue);
                    
                    // Trigger recalculation of any related metrics
                    updateRelatedMetrics(currentValue, estimatedValue);
                });
                
                // Start dragging
                function startDrag(e) {
                    e.preventDefault();
                    isDragging = true;
                    valueTooltip.style.opacity = '1';
                    
                    // Add event listeners for dragging
                    document.addEventListener('mousemove', drag);
                    document.addEventListener('touchmove', drag);
                    document.addEventListener('mouseup', stopDrag);
                    document.addEventListener('touchend', stopDrag);
                }
                
                // During drag
                function drag(e) {
                    if (!isDragging) return;
                    
                    const rect = sliderBar.getBoundingClientRect();
                    
                    // Get x position (handle both mouse and touch)
                    let clientX;
                    if (e.type === 'touchmove') {
                        clientX = e.touches[0].clientX;
                    } else {
                        clientX = e.clientX;
                    }
                    
                    // Calculate position relative to the slider
                    let x = clientX - rect.left;
                    
                    // Clamp x to the bounds of the slider bar
                    x = Math.max(0, Math.min(x, rect.width));
                    
                    // Calculate percentage
                    const percentage = x / rect.width;
                    
                    // Calculate new value based on the range and clamp it
                    const newValue = sliderMinValue + (percentage * (sliderMaxValue - sliderMinValue));
                    currentValue = Math.round(newValue);
                    
                    // Ensure value stays within defined range (redundant but safe)
                    currentValue = Math.max(sliderMinValue, Math.min(currentValue, sliderMaxValue));
                    
                    // Update the UI
                    updateSliderUI(currentValue);
                }
                
                // End dragging
                function stopDrag() {
                    isDragging = false;
                    valueTooltip.style.opacity = '0';
                    
                    // Remove the event listeners
                    document.removeEventListener('mousemove', drag);
                    document.removeEventListener('touchmove', drag);
                    document.removeEventListener('mouseup', stopDrag);
                    document.removeEventListener('touchend', stopDrag);
                    
                    // Store the new asking price in localStorage (ensuring it's clamped)
                    const clampedValue = Math.max(sliderMinValue, Math.min(currentValue, sliderMaxValue));
                    localStorage.setItem('sellerAskingPrice', clampedValue);
                    
                    // Trigger recalculation of any related metrics
                    updateRelatedMetrics(clampedValue, estimatedValue);
                }
                
                // Initialize the slider with the provided estimated value
                // Force an immediate update to ensure the UI matches the model
                console.log(`Initializing slider with: estimated=${estimatedValue}, min=${minValue}, max=${maxValue}`);
                updateSliderUI(currentValue);
                
                // Make the tooltip visible initially, then fade out after 2 seconds
                valueTooltip.style.opacity = '1';
                setTimeout(() => {
                    if (!isDragging) {
                        valueTooltip.style.opacity = '0';
                    }
                }, 2000);
                
                // Return control functions that can be called externally if needed
                return {
                    setValue: (value) => {
                        // Ensure value is clamped when set externally
                        currentValue = Math.max(sliderMinValue, Math.min(Math.round(value), sliderMaxValue));
                        updateSliderUI(currentValue);
                    },
                    getValue: () => currentValue,
                    getMinValue: () => sliderMinValue,
                    getMaxValue: () => sliderMaxValue
                };
            }
            
