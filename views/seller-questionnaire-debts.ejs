<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Questionnaire - Debts & Liabilities | Arzani Marketplace</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <%- include('../views/partials/tailwind-setup') %>
    <link rel="stylesheet" href="/css/seller-questionnaire.css">
    <link rel="stylesheet" href="/css/progress-bar.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: white;
            overflow: hidden; /* Hide scrollbar */
        }
        .header {
            height: 87px;
            border-bottom: 0.8px solid #bfbcc6;
        }
        .content-container {
            height: calc(100vh - 87px - 100px); /* Header height (87px) and footer height (100px) */
            overflow-y: auto; /* Enable scrolling inside container if needed */
            padding-bottom: 20px;
        }
        .btn-main {
            background-color: #25224a;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-next {
            background-color: #041b76;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
            box-shadow: 7px 7px 17px 0px rgba(25,31,64,0.22);
        }
        .progress-bar {
            background-color: #dee8ff;
            height: 10px;
        }
        .progress-active {
            background-color: #3e50f7;
        }
        .exit-link {
            color: #25224a;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .profile-pics {
            display: flex;
            align-items: center;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
        }
        .profile-pic:not(:first-child) {
            margin-left: -15px;
        }
        .debt-item {
            border: 1px solid #e0e0e0;
            border-radius: 0.5rem;
            margin-bottom: 8px;
            transition: all 0.2s ease;
        }
        .debt-header {
            padding: 10px 16px;
            background-color: #f8f9fc;
            border-radius: 0.5rem 0.5rem 0 0;
            cursor: pointer;
        }
        .debt-content {
            padding: 10px 16px;
            display: none;
        }
        .debt-item.open .debt-content {
            display: block;
        }
        .add-debt-btn {
            background-color: #f0f4ff;
            color: #3e50f7;
            border: 1px dashed #3e50f7;
            transition: all 0.2s ease;
        }
        .add-debt-btn:hover {
            background-color: #e6ecff;
        }
    </style>
</head>
<body>
    <div class="w-full h-screen flex flex-col bg-white">
        <!-- Header -->
        <header class="header w-full bg-white flex items-center flex-shrink-0">
            <div class="container mx-auto px-4 md:px-8 flex items-center justify-between">
                <!-- Logo -->
                <div class="h-12 md:h-16">
                    <img src="/figma design exports/logos/Arzani black-white background 2.png" alt="Arzani" class="h-full">
                </div>
                
                <!-- Right section -->
                <div class="flex items-center gap-4">
                    <!-- Help button -->
                    <div class="hidden md:flex mr-4 h-12 px-6 items-center border border-[#bfbcc6] rounded">
                        <span class="text-[#464154] text-base font-medium">Need help?</span>
                    </div>
                    
                    <!-- Profile pictures -->
                    <div class="profile-pics mr-4">
                        <img src="https://randomuser.me/api/portraits/women/32.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="Support agent" class="profile-pic">
                    </div>
                    
                    <!-- Exit link -->
                    <a href="/" class="exit-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span class="hidden sm:inline">Exit</span>
                    </a>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="content-container flex-grow page-transition">
            <div class="container mx-auto px-4 max-w-2xl pt-8 md:pt-12">
                <h1 class="text-[#25224a] text-2xl md:text-3xl font-black mb-4 text-center">Any business debts or liabilities?</h1>
                <p class="text-[#5f5770] text-lg mb-8 text-center">Transparency about debt helps build trust with potential buyers.</p>
                
                <!-- Debt/Liability Form -->
                <div class="mt-8">
                    <!-- Total Debt Amount -->
                    <div class="mb-6">
                        <label for="totalDebtAmount" class="block text-[#25224a] text-lg font-medium mb-2">Total Outstanding Debt (£)</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <span class="text-gray-500 text-lg">£</span>
                            </div>
                            <input 
                                type="number" 
                                id="totalDebtAmount" 
                                name="totalDebtAmount" 
                                min="0" 
                                step="1000"
                                class="w-full pl-14 px-4 py-4 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7] text-lg" 
                                placeholder="e.g. 75000"
                            >
                        </div>
                        <div class="text-[#5f5770] text-sm mt-2">Enter total amount of all business loans, mortgages, and other debts</div>
                    </div>
                    
                    <!-- Debt Transferable -->
                    <div class="mb-6">
                        <label class="block text-[#25224a] text-lg font-medium mb-2">Will debts be transferred with the business?</label>
                        <div class="mt-2 space-y-2">
                            <div class="flex items-center">
                                <input id="debt-transfer-yes" name="debtTransferable" type="radio" value="yes" class="h-4 w-4 text-[#3e50f7] focus:ring-[#3e50f7]">
                                <label for="debt-transfer-yes" class="ml-3 block text-[#464154]">Yes, all debts will transfer to the buyer</label>
                            </div>
                            <div class="flex items-center">
                                <input id="debt-transfer-some" name="debtTransferable" type="radio" value="some" class="h-4 w-4 text-[#3e50f7] focus:ring-[#3e50f7]">
                                <label for="debt-transfer-some" class="ml-3 block text-[#464154]">Some debts will transfer (specify below)</label>
                            </div>
                            <div class="flex items-center">
                                <input id="debt-transfer-no" name="debtTransferable" type="radio" value="no" class="h-4 w-4 text-[#3e50f7] focus:ring-[#3e50f7]">
                                <label for="debt-transfer-no" class="ml-3 block text-[#464154]">No, all debts will be settled before sale</label>
                            </div>
                            <div class="flex items-center">
                                <input id="debt-transfer-none" name="debtTransferable" type="radio" value="none" class="h-4 w-4 text-[#3e50f7] focus:ring-[#3e50f7]">
                                <label for="debt-transfer-none" class="ml-3 block text-[#464154]">Business has no debt</label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Individual Debts (Dynamic) -->
                    <div class="mt-8">
                        <div class="flex justify-between items-center mb-4">
                            <label class="text-[#25224a] text-lg font-medium">Individual Debts/Liabilities</label>
                        </div>
                        
                        <div id="debt-items-container">
                            <!-- Debt items will be added here -->
                        </div>
                        
                        <button type="button" id="add-debt-btn" class="add-debt-btn w-full mt-3 py-3 rounded-md text-center flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                            </svg>
                            Add Debt/Liability
                        </button>
                    </div>
                    
                    <!-- Additional Notes -->
                    <div class="mt-8">
                        <label for="debtNotes" class="block text-[#25224a] text-lg font-medium mb-2">Additional Notes (optional)</label>
                        <textarea 
                            id="debtNotes" 
                            name="debtNotes" 
                            rows="3" 
                            class="w-full px-4 py-3 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" 
                            placeholder="Add any additional information about your debts or liabilities..."
                        ></textarea>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Footer progress bar -->
        <footer class="w-full bg-white flex-shrink-0">
            <!-- Progress bar system -->
            <div class="container mx-auto px-4 md:px-20 py-2">
                <div class="progress-status">
                    <div class="current-page">Debts & Liabilities</div>
                    <div class="pages-count">Step 10 of 11</div>
                </div>
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-active step-10-of-11" style="width: 90.91%;"></div>
                    </div>
                </div>
                <div class="step-indicators">
                    <% for(let i = 1; i <= 11; i++) { %>
                        <div class="step-dot <%= i < 10 ? 'completed' : (i === 10 ? 'active' : '') %>" data-step="<%= i %>"></div>
                    <% } %>
                </div>
            </div>
            
                            
                <div class="container mx-auto px-4 md:px-20 py-6 md:py-8 pb-10 sm:pb-8 flex justify-between items-center">
                    <button id="backBtn" class="text-[#25224a] text-base font-medium">Back</button>
                    <button id="nextBtn" class="btn-next px-6 md:px-8 py-3 md:py-4 text-white text-base font-medium">Next</button>
                </div>
        </footer>
    </div>

    <!-- Debt Item Template (hidden) -->
    <template id="debt-item-template">
        <div class="debt-item mb-3">
            <div class="debt-header flex justify-between items-center">
                <div class="font-medium debt-title">Debt Item</div>
                <div class="flex items-center">
                    <span class="debt-amount text-sm mr-2">£0</span>
                    <button type="button" class="toggle-debt-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="6 9 12 15 18 9"></polyline>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="debt-content">
                <div class="space-y-3">
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">Type</label>
                        <select class="debt-type w-full p-2 border border-[#bfbcc6] rounded-md">
                            <option value="">Select type...</option>
                            <option value="Loan">Business Loan</option>
                            <option value="Mortgage">Mortgage</option>
                            <option value="Credit">Credit Line</option>
                            <option value="Tax">Tax Liability</option>
                            <option value="Lease">Equipment Lease</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">Amount (£)</label>
                        <input type="number" class="debt-amount-input w-full p-2 border border-[#bfbcc6] rounded-md" placeholder="e.g. 25000">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">Monthly Payment (£)</label>
                        <input type="number" class="debt-payment w-full p-2 border border-[#bfbcc6] rounded-md" placeholder="e.g. 500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">Interest Rate (%)</label>
                        <input type="number" class="debt-interest w-full p-2 border border-[#bfbcc6] rounded-md" placeholder="e.g. 4.5" step="0.1">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">End Date</label>
                        <input type="date" class="debt-end-date w-full p-2 border border-[#bfbcc6] rounded-md">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-[#464154] mb-1">Notes</label>
                        <textarea class="debt-notes w-full p-2 border border-[#bfbcc6] rounded-md" rows="2" placeholder="Additional details..."></textarea>
                    </div>
                    <div class="pt-2">
                        <button type="button" class="remove-debt-btn text-red-500 text-sm flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                                <polyline points="3 6 5 6 21 6"></polyline>
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            </svg>
                            Remove
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add page entry animation
            document.querySelector('main').classList.add('page-transition');
            
            // Set up form elements
            const totalDebtInput = document.getElementById('totalDebtAmount');
            const debtTransferRadios = document.querySelectorAll('input[name="debtTransferable"]');
            const debtNotesInput = document.getElementById('debtNotes');
            const addDebtBtn = document.getElementById('add-debt-btn');
            const debtItemsContainer = document.getElementById('debt-items-container');
            const debtItemTemplate = document.getElementById('debt-item-template');
            
            // Variables to store debt items
            let debtItems = [];
            
            // Load saved values if available
            if (localStorage.getItem('sellerTotalDebtAmount')) {
                totalDebtInput.value = localStorage.getItem('sellerTotalDebtAmount');
            }
            
            if (localStorage.getItem('sellerDebtTransferable')) {
                const savedTransferValue = localStorage.getItem('sellerDebtTransferable');
                debtTransferRadios.forEach(radio => {
                    if (radio.value === savedTransferValue) {
                        radio.checked = true;
                    }
                });
            } else {
                // Default to "Business has no debt" if nothing is saved
                document.getElementById('debt-transfer-none').checked = true;
            }
            
            if (localStorage.getItem('sellerDebtNotes')) {
                debtNotesInput.value = localStorage.getItem('sellerDebtNotes');
            }
            
            // Load saved debt items if available
            if (localStorage.getItem('sellerDebtItems')) {
                try {
                    debtItems = JSON.parse(localStorage.getItem('sellerDebtItems'));
                    renderDebtItems();
                } catch (e) {
                    console.error('Error parsing saved debt items:', e);
                    debtItems = [];
                }
            }
            
            // Function to render debt items
            function renderDebtItems() {
                // Clear container
                debtItemsContainer.innerHTML = '';
                
                // Render each debt item
                debtItems.forEach((item, index) => {
                    const debtElement = addDebtItem();
                    
                    // Fill in values
                    const typeSelect = debtElement.querySelector('.debt-type');
                    const amountInput = debtElement.querySelector('.debt-amount-input');
                    const paymentInput = debtElement.querySelector('.debt-payment');
                    const interestInput = debtElement.querySelector('.debt-interest');
                    const endDateInput = debtElement.querySelector('.debt-end-date');
                    const notesInput = debtElement.querySelector('.debt-notes');
                    const titleElement = debtElement.querySelector('.debt-title');
                    const amountElement = debtElement.querySelector('.debt-amount');
                    
                    typeSelect.value = item.type || '';
                    amountInput.value = item.amount || '';
                    paymentInput.value = item.payment || '';
                    interestInput.value = item.interest || '';
                    endDateInput.value = item.endDate || '';
                    notesInput.value = item.notes || '';
                    
                    // Update title and amount display
                    titleElement.textContent = item.type || 'Debt Item';
                    amountElement.textContent = item.amount ? `£${item.amount}` : '£0';
                    
                    // Associate with index for later reference
                    debtElement.dataset.index = index;
                });
            }
            
            // Function to add a new debt item
            function addDebtItem() {
                const debtItem = document.importNode(debtItemTemplate.content, true).firstElementChild;
                debtItemsContainer.appendChild(debtItem);
                
                // Add event listeners
                const toggleBtn = debtItem.querySelector('.toggle-debt-btn');
                const removeBtn = debtItem.querySelector('.remove-debt-btn');
                const typeSelect = debtItem.querySelector('.debt-type');
                const amountInput = debtItem.querySelector('.debt-amount-input');
                
                // Toggle expand/collapse
                toggleBtn.addEventListener('click', function() {
                    debtItem.classList.toggle('open');
                    const icon = this.querySelector('svg');
                    if (debtItem.classList.contains('open')) {
                        icon.innerHTML = '<polyline points="18 15 12 9 6 15"></polyline>';
                    } else {
                        icon.innerHTML = '<polyline points="6 9 12 15 18 9"></polyline>';
                    }
                });
                
                // Remove debt item
                removeBtn.addEventListener('click', function() {
                    const index = parseInt(debtItem.dataset.index);
                    if (!isNaN(index)) {
                        debtItems.splice(index, 1);
                        saveDebtItems();
                        renderDebtItems();
                    } else {
                        debtItem.remove();
                    }
                });
                
                // Update title and visible amount when type or amount changes
                typeSelect.addEventListener('change', function() {
                    const titleElement = debtItem.querySelector('.debt-title');
                    titleElement.textContent = this.value || 'Debt Item';
                    saveDebtItemData(debtItem);
                });
                
                amountInput.addEventListener('input', function() {
                    const amountElement = debtItem.querySelector('.debt-amount');
                    amountElement.textContent = this.value ? `£${this.value}` : '£0';
                    saveDebtItemData(debtItem);
                });
                
                // Save any input changes
                debtItem.querySelectorAll('input, select, textarea').forEach(input => {
                    input.addEventListener('change', function() {
                        saveDebtItemData(debtItem);
                    });
                });
                
                // Expand by default for new items
                debtItem.classList.add('open');
                
                return debtItem;
            }
            
            // Function to save debt item data
            function saveDebtItemData(debtItem) {
                const index = parseInt(debtItem.dataset.index);
                const typeSelect = debtItem.querySelector('.debt-type');
                const amountInput = debtItem.querySelector('.debt-amount-input');
                const paymentInput = debtItem.querySelector('.debt-payment');
                const interestInput = debtItem.querySelector('.debt-interest');
                const endDateInput = debtItem.querySelector('.debt-end-date');
                const notesInput = debtItem.querySelector('.debt-notes');
                
                const item = {
                    type: typeSelect.value,
                    amount: amountInput.value,
                    payment: paymentInput.value,
                    interest: interestInput.value,
                    endDate: endDateInput.value,
                    notes: notesInput.value
                };
                
                if (!isNaN(index)) {
                    // Update existing item
                    debtItems[index] = item;
                } else {
                    // Add new item
                    debtItems.push(item);
                    debtItem.dataset.index = debtItems.length - 1;
                }
                
                saveDebtItems();
            }
            
            // Function to save all debt items to localStorage
            function saveDebtItems() {
                localStorage.setItem('sellerDebtItems', JSON.stringify(debtItems));
            }
            
            // Add event listener for adding new debt item
            addDebtBtn.addEventListener('click', function() {
                const newItem = addDebtItem();
                
                // Update data model
                const newItemData = {
                    type: '',
                    amount: '',
                    payment: '',
                    interest: '',
                    endDate: '',
                    notes: ''
                };
                
                debtItems.push(newItemData);
                newItem.dataset.index = debtItems.length - 1;
                saveDebtItems();
            });
            
            // Form navigation
            const backBtn = document.getElementById('backBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            backBtn.addEventListener('click', function() {
                // Save form data
                saveSummaryData();
                
                // Add exit animation to main content
                const mainContent = document.querySelector('main');
                mainContent.style.transition = 'opacity 0.3s ease-out';
                mainContent.style.opacity = '0';
                
                // Animate progress bar transition
                const progressBar = document.getElementById('progressBar');
                progressBar.style.width = '80%'; // Move back to previous step
                
                // Animate dot indicators
                const currentDot = document.querySelector('.step-dot[data-step="9"]');
                const prevDot = document.querySelector('.step-dot[data-step="8"]');
                
                currentDot.classList.remove('active');
                prevDot.classList.remove('completed');
                prevDot.classList.add('active');
                
                // Delay navigation to allow animation to complete
                setTimeout(() => {
                    window.location.href = '/seller-questionnaire/growth';
                }, 400);
            });
            
            nextBtn.addEventListener('click', function() {
                // Save form data
                saveSummaryData();
                
                // Add exit animation to main content
                const mainContent = document.querySelector('main');
                mainContent.style.transition = 'opacity 0.3s ease-out';
                mainContent.style.opacity = '0';
                
                // Animate progress bar transition
                const progressBar = document.getElementById('progressBar');
                progressBar.style.width = '100%'; // Move to next step
                
                // Animate dot indicators
                const currentDot = document.querySelector('.step-dot[data-step="9"]');
                const nextDot = document.querySelector('.step-dot[data-step="10"]');
                
                currentDot.classList.remove('active');
                currentDot.classList.add('completed');
                nextDot.classList.add('active');
                
                // Delay navigation to allow animation to complete
                setTimeout(() => {
                    window.location.href = '/seller-questionnaire/form';
                }, 400);
            });
            
            // Function to save summary data
            function saveSummaryData() {
                // Get selected debt transferability value
                let debtTransferable = '';
                debtTransferRadios.forEach(radio => {
                    if (radio.checked) {
                        debtTransferable = radio.value;
                    }
                });
                
                localStorage.setItem('sellerTotalDebtAmount', totalDebtInput.value);
                localStorage.setItem('sellerDebtTransferable', debtTransferable);
                localStorage.setItem('sellerDebtNotes', debtNotesInput.value);
                saveDebtItems(); // Make sure debt items are saved
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Debug the next button functionality
            const nextBtn = document.getElementById('nextBtn');
            if (nextBtn) {
                console.log('Next button found on debts page');
                
                // Override the click handler to ensure proper navigation
                nextBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Save form data first
                    saveFormData();
                    
                    // Add exit animation
                    const mainContent = document.querySelector('main');
                    mainContent.style.transition = 'opacity 0.3s ease-out';
                    mainContent.style.opacity = '0';
                    
                    // Animate progress bar
                    const progressActive = document.querySelector('.progress-active');
                    if (progressActive) {
                        progressActive.style.transition = 'width 0.4s ease-out';
                        progressActive.style.width = '100%'; // Final step percentage
                    }
                    
                    // Update step indicators
                    const currentDot = document.querySelector('.step-dot[data-step="10"]');
                    const nextDot = document.querySelector('.step-dot[data-step="11"]');
                    if (currentDot && nextDot) {
                        currentDot.classList.remove('active');
                        currentDot.classList.add('completed');
                        nextDot.classList.add('active');
                    }
                    
                    // Log the navigation attempt
                    console.log('Navigating from debts page to valuation page');
                    
                    // Navigate directly to the valuation page after animation
                    setTimeout(() => {
                        window.location.href = '/seller-questionnaire/valuation';
                    }, 300);
                    
                    return false;
                }, true);
            } else {
                console.error('Next button not found on debts page');
            }
            
            // Add direct event listener to Back button with animation
            const backBtn = document.getElementById('backBtn');
            if (backBtn) {
                backBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Save form data first
                    saveFormData();
                    
                    // Add exit animation
                    const mainContent = document.querySelector('main');
                    mainContent.style.transition = 'opacity 0.3s ease-out';
                    mainContent.style.opacity = '0';
                    
                    // Animate progress bar
                    const progressActive = document.querySelector('.progress-active');
                    if (progressActive) {
                        progressActive.style.transition = 'width 0.4s ease-out';
                        progressActive.style.width = '81.82%'; // Previous step percentage
                    }
                    
                    // Update step indicators
                    const currentDot = document.querySelector('.step-dot[data-step="10"]');
                    const prevDot = document.querySelector('.step-dot[data-step="9"]');
                    if (currentDot && prevDot) {
                        currentDot.classList.remove('active');
                        prevDot.classList.remove('completed');
                        prevDot.classList.add('active');
                    }
                    
                    // Navigate after animation completes
                    setTimeout(() => {
                        window.location.href = '/seller-questionnaire/growth';
                    }, 300);
                }, true);
            }
            
            // Function to save form data
            function saveFormData() {
                const totalDebtAmount = document.getElementById('totalDebtAmount')?.value || '';
                localStorage.setItem('sellerTotalDebtAmount', totalDebtAmount);
                
                const debtTransferable = document.querySelector('input[name="debtTransferable"]:checked')?.value || '';
                localStorage.setItem('sellerDebtTransferable', debtTransferable);
                
                const debtNotes = document.getElementById('debtNotes')?.value || '';
                localStorage.setItem('sellerDebtNotes', debtNotes);
                
                // Save any debt items if available
                const debtItems = document.getElementById('debtItems')?.value || '';
                localStorage.setItem('sellerDebtItems', debtItems);
                
                console.log('Debts data saved to localStorage');
            }
            
            // Set up validation function for navigation (if needed)
            window.validateBeforeNext = function() {
                // Save form data
                saveFormData();
                return true;
            };
        });
    </script>
