        <!-- Main Content -->
        <div id="content" class="flex-1 overflow-y-auto content-transition ml-0 md:ml-20 xl:ml-64">
            <!-- Top Navbar -->
            <nav class="bg-white dark:bg-gray-800 shadow-md sticky top-0 z-30">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex items-center justify-between h-16">
                        <!-- Left side - Hamburger and Page Title -->
                        <div class="flex items-center">
                            <button id="sidebarToggle" class="md:hidden text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 mr-4">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                            </button>
                            <h1 class="text-xl font-semibold text-gray-800 dark:text-white">Chat</h1>
                        </div>
                        
                        <!-- Right side - Breadcrumb -->
                        <nav class="hidden md:flex" aria-label="Breadcrumb">
                            <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                                <li><a href="/marketplace2" class="hover:text-gray-700 dark:hover:text-gray-200">Home</a></li>
                                <li><i class="fas fa-chevron-right text-xs"></i></li>
                                <li class="text-gray-700 dark:text-gray-300">Chat</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="flex h-full">
                <!-- Chat Sidebar -->
                <div id="chatSidebar" class="w-80 bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 flex-shrink-0 flex flex-col transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out fixed lg:relative left-0 top-0 h-full z-30">
                    <!-- Sidebar Header -->
                    <div class="sidebar-header flex justify-between items-center px-4 py-3 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
                        <h2 class="text-lg font-semibold text-gray-800 dark:text-white">Conversations</h2>
                    </div>
                    
                    <!-- User Info Section -->
                    <div class="user-info p-4 border-b border-gray-200 dark:border-gray-700">
                        <% if (locals.userId) { %>
                            <div class="flex items-center" id="profile-container">
                                <div class="user-avatar w-10 h-10 rounded-full overflow-hidden mr-3">
                                    <img src="<%= user?.profile_picture || '/images/default-profile.png' %>" 
                                         alt="Profile" 
                                         id="sidebar-profile-picture"
                                         class="w-full h-full object-cover" 
                                         onerror="this.src='/images/default-profile.png'"/>
                                </div>
                                <div>
                                    <div id="sidebar-username" class="user-name font-medium text-gray-800 dark:text-white"><%= user?.username || 'Loading...' %></div>
                                    <div id="user-status" class="text-xs text-gray-500 dark:text-gray-400">
                                        <span class="status-indicator inline-block w-2 h-2 rounded-full bg-gray-400 mr-1"></span>
                                        <span class="status-text">Offline</span>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="auth-notice text-center">
                                <a href="/login2?returnTo=<%= encodeURIComponent('/chat' + (activeConversationId ? '?conversation=' + activeConversationId : '')) %>" class="login-btn bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">
                                    Log in to chat
                                </a>
                            </div>
                        <% } %>
                    </div>
                    
                    <!-- New Conversation Button -->
                    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700">
                        <h3 class="text-sm font-semibold text-gray-600 dark:text-gray-300">Recent</h3>
                        <button id="new-conversation-btn" class="bg-primary text-white text-sm px-3 py-1 rounded-md hover:bg-primary-dark transition">
                            <i class="fas fa-plus mr-1"></i> New
                        </button>
                    </div>
                    
                    <!-- Conversations List -->
                    <div class="conversations-list flex-1 overflow-y-auto py-2 px-2 custom-scrollbar">
                        <% if (conversations && conversations.length > 0) { %>
                            <% conversations.forEach(function(conversation) { %>
                                <div class="conversation-item <%= conversation.id === activeConversationId ? 'active bg-blue-50 dark:bg-blue-900/20' : '' %> 
                                         hover:bg-gray-100 dark:hover:bg-gray-700 p-3 rounded-lg mb-2 cursor-pointer transition-colors" 
                                     data-conversation-id="<%= conversation.id %>">
                                    <div class="flex items-start">
                                        <div class="conversation-avatar bg-gray-200 dark:bg-gray-600 w-10 h-10 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                                            <% if (conversation.is_group_chat) { %>
                                                <i class="fas fa-users text-gray-500 dark:text-gray-400"></i>
                                            <% } else if (conversation.is_ai_chat) { %>
                                                <img src="/figma design exports/images.webp/arzani-icon-nobackground.png" alt="Arzani AI" class="w-4 h-4 object-contain" onerror="this.onerror=null; this.src='https://cdn-icons-png.flaticon.com/512/4616/4616734.png';">
                                            <% } else { %>
                                                <i class="fas fa-user text-gray-500 dark:text-gray-400"></i>
                                            <% } %>
                                        </div>
                                        <div class="conversation-details flex-1 min-w-0">
                                            <div class="conversation-name font-medium text-gray-800 dark:text-white truncate">
                                                <%= conversation.group_name || 'Conversation ' + conversation.id %>
                                            </div>
                                            <div class="conversation-last-message flex justify-between items-center mt-1 text-xs">
                                                <% if (conversation.unread_count > 0) { %>
                                                    <span class="unread-badge bg-primary text-white rounded-full min-w-5 h-5 flex items-center justify-center px-1.5 text-xs font-medium">
                                                        <%= conversation.unread_count %>
                                                    </span>
                                                <% } %>
                                                <span class="last-updated text-gray-500 dark:text-gray-400 ml-auto">
                                                    <%= formatTime(conversation.updated_at) %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="no-conversations p-4 text-center text-gray-500 dark:text-gray-400">
                                <p>No conversations yet.</p>
                                <% if (locals.userId) { %>
                                    <p class="mt-2">Start a new conversation to chat!</p>
                                <% } else { %>
                                    <p class="mt-2">Log in to start chatting.</p>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
                
                <!-- Main Chat Area -->
                <div class="flex-1 flex flex-col bg-gray-50 dark:bg-gray-900">
                    <% if (activeConversationId) { %>
                        <!-- Chat Header -->
                        <div class="flex items-center justify-between px-4 py-3 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center min-w-0 mr-1">
                                <button id="toggleSidebarBtn" class="lg:hidden mr-2 flex-shrink-0 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 p-2 rounded-full" title="Toggle Conversations">
                                    <i class="fas fa-comments"></i>
                                </button>
                                <h2 id="conversation-title" class="font-semibold text-gray-800 dark:text-white truncate text-sm sm:text-base max-w-[120px] sm:max-w-xs md:max-w-sm">
                                    <%= conversations.find(c => c.id === activeConversationId)?.group_name || 'Conversation ' + activeConversationId %>
                                </h2>
