    <!-- Script Loader - Ensures dependencies load in the right order with proper error handling -->
    <script>
    (function() {
        // Initialize script status tracking object if it doesn't exist
        window.scriptStatus = window.scriptStatus || {};
        
        // Collection of scripts to load
        var scripts = [
            { name: 'image-handler', src: '/js/image-handler.js', loaded: false, required: false },
            { name: 'socket-io', src: '/js/socket-io.js', loaded: false, required: true },
            { name: 'chat', src: '/js/chat.js', loaded: false, required: true },
            { name: 'chat-interface', src: '/js/chat-interface.js', loaded: false, required: true },
            { name: 'chat-activity-tracker', src: '/js/chat-activity-tracker.js', loaded: false, required: false },
            { name: 'scroll', src: '/js/scroll.js', loaded: false, required: false },
            { name: 'message-analyzer', src: '/js/message-analyzer.js', loaded: false, required: false }
        ];
        
        // Verify Socket.io is available
        function verifySocketIo() {
            if (typeof io === 'function') {
                console.log('Socket.io verified as a function ✓');
                window.scriptStatus.socketIo = true;
                return true;
            }
            return false;
        }
        
        // Wait until Socket.io is definitely available
        function waitForSocketIo(callback, maxAttempts) {
            var attempts = 0;
            var maxWait = maxAttempts || 20; // 10 seconds total

            function checkSocketIo() {
                attempts++;
                if (window.scriptStatus.socketIo || verifySocketIo()) {
                    console.log(`Socket.io loaded successfully after ${attempts} attempts`);
                    callback();
                    return;
                }
                
                if (attempts >= maxWait) {
                    console.error('Timed out waiting for Socket.io, proceeding anyway');
                    callback();
                    return;
                }
                
                console.log(`Socket.io not ready, attempt ${attempts}/${maxWait}`);
                setTimeout(checkSocketIo, 500);
            }
            
            checkSocketIo();
        }
        
        // Wait until ChatSocket is available
        function waitForChatSocket(callback, maxAttempts) {
            var attempts = 0;
            var maxWait = maxAttempts || 20; // 10 seconds total

            function checkChatSocket() {
                attempts++;
                if (window.ChatSocket) {
                    console.log(`ChatSocket loaded successfully after ${attempts} attempts`);
                    callback();
                    return;
                }
                
                if (attempts >= maxWait) {
                    console.error('Timed out waiting for ChatSocket, proceeding anyway');
                    callback();
                    return;
                }
                
                console.log(`ChatSocket not ready, attempt ${attempts}/${maxWait}`);
                setTimeout(checkChatSocket, 500);
            }
            
            checkChatSocket();
        }
        
        // Load scripts in sequence
        function loadNextScript(index) {
            if (index >= scripts.length) {
                console.log('All chat scripts loaded successfully!');
                initChatFunctionality();
                return;
            }
            
            // Skip already loaded scripts (like image-handler.js which we loaded in the head)
            if (scripts[index].loaded || window.scriptStatus[scripts[index].name]) {
                console.log(`Script already loaded: ${scripts[index].name}`);
                loadNextScript(index + 1);
                return;
            }
            
            var script = document.createElement('script');
            script.src = scripts[index].src;
            
            script.onload = function() {
                console.log('Loaded: ' + scripts[index].name);
                scripts[index].loaded = true;
                window.scriptStatus[scripts[index].name] = true;
                loadNextScript(index + 1);
            };
            
            script.onerror = function() {
                console.error('Failed to load: ' + scripts[index].name);
                if (scripts[index].required) {
                    console.error('Required script failed to load');
                    displayScriptError(scripts[index].name);
                } else {
                    loadNextScript(index + 1);
                }
            };
            
            document.body.appendChild(script);
        }
        
        function displayScriptError(scriptName) {
            var messagesContainer = document.querySelector('.messages-list, #messages-list');
            if (messagesContainer) {
                messagesContainer.innerHTML = `
                    <div class="error-message p-4 bg-red-100 text-red-800 rounded">
                        <h3 class="font-bold mb-2">Error Loading Chat</h3>
                        <p class="mb-3">Failed to load required script: ${scriptName}</p>
                        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" onclick="location.reload()">Reload Page</button>
                    </div>
                `;
            }
        }
        
        function initChatFunctionality() {
            // Call chat initialization functions if they exist
            if (typeof window.initChat === 'function') {
                window.initChat();
            }
            
            if (typeof window.initConversationList === 'function') {
                window.initConversationList();
            }
            
            // Init profile data
            if (typeof window.fetchUserProfileData === 'function') {
                window.fetchUserProfileData();
            }
            
            console.log('Chat functionality initialized!');
        }
        
        // Begin the loading process - wait for Socket.io first, then ChatSocket
        waitForSocketIo(function() {
            // Now wait for ChatSocket (our wrapper)
            waitForChatSocket(function() {
                // Finally load other scripts
                loadNextScript(0);
            });
        });
    })();
    </script>

