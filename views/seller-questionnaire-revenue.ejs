<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Questionnaire - Yearly Revenue | Arzani Marketplace</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <%- include('../views/partials/tailwind-setup') %>
    <link rel="stylesheet" href="/css/seller-questionnaire.css">
    <link rel="stylesheet" href="/css/progress-bar.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: white;
            overflow: hidden; /* Hide scrollbar */
        }
        .header {
            height: 87px;
            border-bottom: 0.8px solid #bfbcc6;
        }
        .content-container {
            height: calc(100vh - 87px - 100px); /* Header height (87px) and footer height (100px) */
            overflow-y: auto; /* Enable scrolling inside container if needed */
            padding-bottom: 20px;
        }
        .btn-main {
            background-color: #25224a;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-next {
            background-color: #041b76;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
            box-shadow: 7px 7px 17px 0px rgba(25,31,64,0.22);
        }
        .progress-bar {
            background-color: #dee8ff;
            height: 10px;
        }
        .progress-active {
            background-color: #3e50f7;
        }
        .exit-link {
            color: #25224a;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .profile-pics {
            display: flex;
            align-items: center;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
        }
        .profile-pic:not(:first-child) {
            margin-left: -15px;
        }
        .revenue-option {
            border: 2px solid #bfbcc6;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
            position: relative;
        }
        .revenue-option:hover {
            border-color: #3e50f7;
            background-color: rgba(62, 80, 247, 0.05);
        }
        .revenue-option.selected {
            border-color: #3e50f7;
            background-color: rgba(62, 80, 247, 0.1);
        }
        .revenue-option-check {
            display: none;
            color: #3e50f7;
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
        }
        .revenue-option.selected .revenue-option-check {
            display: block;
        }
    </style>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W50GKB6F3M"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-W50GKB6F3M');
    </script>
</head>
<body>
    <div class="w-full h-screen flex flex-col bg-white">
        <!-- Header -->
        <header class="header w-full bg-white flex items-center flex-shrink-0">
            <div class="container mx-auto px-4 md:px-8 flex items-center justify-between">
                <!-- Logo -->
                <div class="h-12 md:h-16">
                    <img src="/figma design exports/logos/Arzani black-white background 2.png" alt="Arzani" class="h-full">
                </div>
                
                <!-- Right section -->
                <div class="flex items-center gap-4">
                    <!-- Help button -->
                    <div class="hidden md:flex mr-4 h-12 px-6 items-center border border-[#bfbcc6] rounded">
                        <span class="text-[#464154] text-base font-medium">Need help?</span>
                    </div>
                    
                    <!-- Profile pictures -->
                    <div class="profile-pics mr-4">
                        <img src="https://randomuser.me/api/portraits/women/32.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="Support agent" class="profile-pic">
                    </div>
                    
                    <!-- Exit link -->
                    <a href="/" class="exit-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span class="hidden sm:inline">Exit</span>
                    </a>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="content-container flex-grow page-transition">
            <div class="container mx-auto px-4 max-w-3xl pt-8 md:pt-12">
                <h1 class="text-[#25224a] text-2xl md:text-3xl font-black mb-4 text-center">Financial Performance</h1>
                <p class="text-[#5f5770] text-lg mb-8 text-center">Provide your key financial figures for the last few years.</p>

                <form id="revenueForm">
                    <!-- Exact Revenue -->
                    <div class="mb-6">
                        <label for="revenueExact" class="block text-[#25224a] text-sm font-medium mb-2">Most Recent Full Year Revenue (£)</label>
                        <input type="text" inputmode="decimal" id="revenueExact" name="revenueExact" class="w-full px-4 py-3 border border-[#dee8ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" placeholder="e.g., 500000">
                        <p id="revenueError" class="mt-1 text-red-500 text-sm hidden">Please enter your most recent annual revenue.</p>
                    </div>

                    <!-- Previous Year Revenue -->
                    <div class="mb-6">
                        <label for="revenuePreviousYear" class="block text-[#25224a] text-sm font-medium mb-2">Previous Year Revenue (£) (Optional)</label>
                        <input type="text" inputmode="decimal" id="revenuePreviousYear" name="revenuePreviousYear" class="w-full px-4 py-3 border border-[#dee8ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" placeholder="e.g., 450000">
                    </div>

                    <!-- 2 Years Ago Revenue -->
                    <div class="mb-6">
                        <label for="revenue2YearsAgo" class="block text-[#25224a] text-sm font-medium mb-2">Revenue 2 Years Ago (£) (Optional)</label>
                        <input type="text" inputmode="decimal" id="revenue2YearsAgo" name="revenue2YearsAgo" class="w-full px-4 py-3 border border-[#dee8ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" placeholder="e.g., 400000">
                    </div>

                    <!-- 3 Years Ago Revenue -->
                    <div class="mb-6">
                        <label for="revenue3YearsAgo" class="block text-[#25224a] text-sm font-medium mb-2">Revenue 3 Years Ago (£) (Optional)</label>
                        <input type="text" inputmode="decimal" id="revenue3YearsAgo" name="revenue3YearsAgo" class="w-full px-4 py-3 border border-[#dee8ff] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7]" placeholder="e.g., 350000">
                    </div>

                    <!-- Growth Rate Display (Read-only) -->
                    <div class="mb-8 p-4 bg-blue-50 rounded-md border border-blue-200">
                        <p class="text-[#25224a] text-sm font-medium mb-1">Estimated Average Annual Growth Rate:</p>
                        <p id="growthRateDisplay" class="text-[#3e50f7] text-lg font-semibold">Calculating...</p>
                        <p class="text-xs text-gray-500 mt-1">Based on the revenue figures provided above.</p>
                    </div>
                </form>
            </div>
        </main>

        <!-- Footer progress bar -->
        <footer class="w-full bg-white flex-shrink-0">
            <!-- Progress bar system -->
            <div class="container mx-auto px-4 md:px-20 py-2">
                <div class="progress-status">
                    <div class="current-page">Yearly Revenue</div>
                    <div class="pages-count">Step 5 of 11</div>
                </div>
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-active step-5-of-11" style="width: 45.45%;"></div>
                    </div>
                </div>
                <div class="step-indicators">
                    <% for(let i = 1; i <= 11; i++) { %>
                        <div class="step-dot <%= i < 5 ? 'completed' : (i === 5 ? 'active' : '') %>" data-step="<%= i %>"></div>
                    <% } %>
                </div>
            </div>
            
                        
                <div class="container mx-auto px-4 md:px-20 py-6 md:py-8 pb-10 sm:pb-8 flex justify-between items-center">
                    <button id="backBtn" class="text-[#25224a] text-base font-medium">Back</button>
                    <button id="nextBtn" class="btn-next px-6 md:px-8 py-3 md:py-4 text-white text-base font-medium">Next</button>
                </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/js/questionnaire-navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const revenueExactInput = document.getElementById('revenueExact');
            const revenuePreviousYearInput = document.getElementById('revenuePreviousYear');
            const revenue2YearsAgoInput = document.getElementById('revenue2YearsAgo');
            const revenue3YearsAgoInput = document.getElementById('revenue3YearsAgo'); // Added
            const revenueError = document.getElementById('revenueError');
            const growthRateDisplay = document.getElementById('growthRateDisplay');

            // Function to clean input value (allow numbers, decimal, negative)
            function cleanNumericInput(value) {
                if (typeof value !== 'string') return '';
                // Keep digits, decimal point, and minus sign
                let cleaned = value.replace(/[^\d.-]/g, '');
                // Ensure only one decimal point
                const parts = cleaned.split('.');
                if (parts.length > 2) {
                    cleaned = parts[0] + '.' + parts.slice(1).join('');
                }
                // Ensure minus sign is only at the beginning
                if (cleaned.lastIndexOf('-') > 0) {
                     cleaned = cleaned.replace(/-/g, (match, offset) => offset === 0 ? '-' : '');
                }
                return cleaned;
            }

            // Function to save cleaned numeric input to localStorage
            function saveNumericInput(inputElement, storageKey) {
                const cleanedValue = cleanNumericInput(inputElement.value);
                localStorage.setItem(storageKey, cleanedValue || ''); // Save cleaned value or empty string
                console.log(`Saved ${storageKey}: ${cleanedValue || '(empty)'}`);
            }

            // Function to calculate and display growth rate
            function calculateGrowthRate() {
                const revNow = parseFloat(cleanNumericInput(revenueExactInput.value)) || 0;
                const rev1 = parseFloat(cleanNumericInput(revenuePreviousYearInput.value)) || null;
                const rev2 = parseFloat(cleanNumericInput(revenue2YearsAgoInput.value)) || null;
                const rev3 = parseFloat(cleanNumericInput(revenue3YearsAgoInput.value)) || null;

                const revenues = [rev3, rev2, rev1, revNow].filter(r => r !== null && r > 0); // Use only positive revenues

                if (revenues.length < 2) {
                    growthRateDisplay.textContent = 'Need at least two years of revenue';
                    localStorage.setItem('sellerGrowthRate', ''); // Clear saved rate
                    return;
                }

                const firstYearRevenue = revenues[0];
                const lastYearRevenue = revenues[revenues.length - 1];
                const numberOfPeriods = revenues.length - 1;

                // Calculate Compound Annual Growth Rate (CAGR)
                const cagr = (Math.pow(lastYearRevenue / firstYearRevenue, 1 / numberOfPeriods) - 1) * 100;

                if (isNaN(cagr) || !isFinite(cagr)) {
                    growthRateDisplay.textContent = 'Could not calculate';
                     localStorage.setItem('sellerGrowthRate', '');
                } else {
                    const formattedCAGR = cagr.toFixed(1);
                    growthRateDisplay.textContent = `${formattedCAGR}%`;
                    localStorage.setItem('sellerGrowthRate', formattedCAGR); // Save calculated rate
                    console.log(`Calculated and saved Growth Rate: ${formattedCAGR}%`);
                }
            }

            // Add input event listeners to clean input and recalculate growth rate
            [revenueExactInput, revenuePreviousYearInput, revenue2YearsAgoInput, revenue3YearsAgoInput].forEach(input => {
                input.addEventListener('input', function() {
                    const cleaned = cleanNumericInput(this.value);
                    // Update the input value only if it changed after cleaning
                    if (this.value !== cleaned) {
                        this.value = cleaned;
                    }

                    // Clear error message for exact revenue when user types
                    if (this.id === 'revenueExact' && this.value) {
                        revenueError.classList.add('hidden');
                        revenueExactInput.classList.remove('border-red-500');
                    }
                    calculateGrowthRate(); // Recalculate on any input change
                });
                 // Also calculate on blur in case of pasting etc.
                 input.addEventListener('blur', calculateGrowthRate);
            });

            // Load saved values from localStorage
            revenueExactInput.value = localStorage.getItem('sellerRevenueExact') || '';
            revenuePreviousYearInput.value = localStorage.getItem('sellerRevenuePrevYear') || '';
            revenue2YearsAgoInput.value = localStorage.getItem('sellerRevenue2YearsAgo') || '';
            revenue3YearsAgoInput.value = localStorage.getItem('sellerRevenue3YearsAgo') || ''; // Load new field

            // Initial calculation of growth rate on page load
            calculateGrowthRate();

            // Validation function for the Next button
            window.validateBeforeNext = function() {
                const cleanedRevenueExact = cleanNumericInput(revenueExactInput.value);
                // Check if exact revenue has been entered and is a valid number > 0
                if (!cleanedRevenueExact || isNaN(parseFloat(cleanedRevenueExact)) || parseFloat(cleanedRevenueExact) <= 0) {
                    revenueError.textContent = 'Please enter a valid positive revenue amount for the most recent year.';
                    revenueError.classList.remove('hidden');
                    revenueExactInput.classList.add('border-red-500');
                    revenueExactInput.focus();
                    return false;
                } else {
                    revenueError.classList.add('hidden');
                    revenueExactInput.classList.remove('border-red-500');
                }

                // Save all values to localStorage using the helper
                saveNumericInput(revenueExactInput, 'sellerRevenueExact');
                saveNumericInput(revenuePreviousYearInput, 'sellerRevenuePrevYear');
                saveNumericInput(revenue2YearsAgoInput, 'sellerRevenue2YearsAgo');
                saveNumericInput(revenue3YearsAgoInput, 'sellerRevenue3YearsAgo'); // Save new field

                // Growth rate is saved automatically by calculateGrowthRate

                return true; // Allow navigation
            };
        });
    </script>
</body>
</html>