<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f8faff 0%, #e6f3ff 100%);
            min-height: 100vh;
        }
        
        .success-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
        }
        
        .success-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }
        
        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .success-header {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .success-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: shimmer 3s ease-in-out infinite;
        }
        
        @keyframes shimmer {
            0%, 100% { transform: rotate(0deg); }
            50% { transform: rotate(180deg); }
        }
        
        .success-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            animation: bounce 1s ease-in-out;
        }
        
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-20px); }
            60% { transform: translateY(-10px); }
        }
        
        .success-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        
        .success-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin: 0;
        }
        
        .purchase-details {
            padding: 2rem;
        }
        
        .detail-grid {
            display: grid;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: linear-gradient(135deg, #f8faff 0%, #e6f3ff 100%);
            border-radius: 12px;
            border-left: 4px solid #10b981;
        }
        
        .detail-label {
            font-weight: 600;
            color: #374151;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .detail-value {
            font-weight: 700;
            color: #059669;
            font-size: 1.1rem;
        }
        
        .tokens-highlight {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 2rem;
            border-radius: 16px;
            text-align: center;
            margin: 2rem 0;
            position: relative;
            overflow: hidden;
        }
        
        .tokens-highlight::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            animation: slideAcross 2s ease-in-out infinite;
        }
        
        @keyframes slideAcross {
            0% { left: -100%; }
            50% { left: 100%; }
            100% { left: 100%; }
        }
        
        .tokens-amount {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }
        
        .tokens-label {
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .bonus-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-top: 1rem;
        }
        
        .action-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 2rem;
        }
        
        .btn-primary-custom {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            border: none;
            color: white;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.6);
            color: white;
        }
        
        .btn-secondary-custom {
            background: rgba(107, 114, 128, 0.1);
            border: 2px solid #6b7280;
            color: #374151;
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .btn-secondary-custom:hover {
            background: rgba(107, 114, 128, 0.2);
            transform: translateY(-2px);
            color: #374151;
        }
        
        .receipt-section {
            background: #f9fafb;
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
            border: 1px solid #e5e7eb;
        }
        
        .receipt-title {
            font-weight: 700;
            color: #374151;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .receipt-detail {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .receipt-detail:last-child {
            border-bottom: none;
            font-weight: 700;
            font-size: 1.1rem;
            color: #059669;
        }
        
        .confetti {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1000;
        }
        
        @media (max-width: 768px) {
            .success-container {
                margin: 1rem;
                padding: 1rem;
            }
            
            .success-header {
                padding: 2rem 1rem;
            }
            
            .success-title {
                font-size: 2rem;
            }
            
            .success-subtitle {
                font-size: 1rem;
            }
            
            .tokens-amount {
                font-size: 2.5rem;
            }
            
            .action-buttons {
                grid-template-columns: 1fr;
            }
            
            .detail-row {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <!-- Success Header -->
            <div class="success-header">
                <div class="success-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <h1 class="success-title">Payment Successful!</h1>
                <p class="success-subtitle">Your tokens have been added to your account</p>
            </div>
            
            <!-- Purchase Details -->
            <div class="purchase-details">
                <!-- Tokens Highlight -->
                <div class="tokens-highlight">
                    <div class="tokens-amount"><%= purchase.tokensReceived %></div>
                    <div class="tokens-label">Tokens Added to Your Account</div>
                    <% if (purchase.bonusTokens > 0) { %>
                        <div class="bonus-badge">
                            <i class="bi bi-gift-fill"></i>
                            Includes <%= purchase.bonusTokens %> bonus tokens!
                        </div>
                    <% } %>
                </div>
                
                <!-- Purchase Details Grid -->
                <div class="detail-grid">
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="bi bi-box-seam"></i>
                            Package
                        </div>
                        <div class="detail-value"><%= purchase.packageName %></div>
                    </div>
                    
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="bi bi-coins"></i>
                            Base Tokens
                        </div>
                        <div class="detail-value"><%= purchase.baseTokens %></div>
                    </div>
                    
                    <% if (purchase.bonusTokens > 0) { %>
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="bi bi-gift"></i>
                            Bonus Tokens
                        </div>
                        <div class="detail-value">+<%= purchase.bonusTokens %></div>
                    </div>
                    <% } %>
                    
                    <div class="detail-row">
                        <div class="detail-label">
                            <i class="bi bi-wallet2"></i>
                            New Balance
                        </div>
                        <div class="detail-value"><%= purchase.newBalance %> tokens</div>
                    </div>
                </div>
                
                <!-- Receipt Section -->
                <div class="receipt-section">
                    <div class="receipt-title">
                        <i class="bi bi-receipt"></i>
                        Payment Receipt
                    </div>
                    <div class="receipt-detail">
                        <span>Amount Paid:</span>
                        <span><%= purchase.currency %> Â£<%= purchase.amountPaid %></span>
                    </div>
                    <div class="receipt-detail">
                        <span>Transaction ID:</span>
                        <span><%= purchase.sessionId.substring(0, 20) %>...</span>
                    </div>
                    <div class="receipt-detail">
                        <span>Date:</span>
                        <span><%= new Date(purchase.timestamp).toLocaleDateString() %> <%= new Date(purchase.timestamp).toLocaleTimeString() %></span>
                    </div>
                    <div class="receipt-detail">
                        <span><strong>Total Tokens Received:</strong></span>
                        <span><strong><%= purchase.tokensReceived %> tokens</strong></span>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a href="/marketplace2" class="btn-primary-custom">
                        <i class="bi bi-shop"></i>
                        Browse Marketplace
                    </a>
                    <a href="/profile" class="btn-secondary-custom">
                        <i class="bi bi-person-circle"></i>
                        View Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Confetti Effect -->
    <canvas class="confetti" id="confetti"></canvas>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Confetti Animation Script -->
    <script>
        // Simple confetti effect
        const canvas = document.getElementById('confetti');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        
        const confetti = [];
        const colors = ['#10b981', '#3b82f6', '#f59e0b', '#ef4444', '#8b5cf6'];
        
        // Create confetti pieces
        for (let i = 0; i < 50; i++) {
            confetti.push({
                x: Math.random() * canvas.width,
                y: -10,
                size: Math.random() * 5 + 2,
                speed: Math.random() * 3 + 1,
                color: colors[Math.floor(Math.random() * colors.length)],
                angle: Math.random() * 360,
                rotationSpeed: Math.random() * 10 - 5
            });
        }
        
        function drawConfetti() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            confetti.forEach((piece, index) => {
                ctx.save();
                ctx.translate(piece.x, piece.y);
                ctx.rotate(piece.angle * Math.PI / 180);
                ctx.fillStyle = piece.color;
                ctx.fillRect(-piece.size/2, -piece.size/2, piece.size, piece.size);
                ctx.restore();
                
                // Update position
                piece.y += piece.speed;
                piece.x += Math.sin(piece.y / 100) * 0.5;
                piece.angle += piece.rotationSpeed;
                
                // Remove if off screen
                if (piece.y > canvas.height + 10) {
                    confetti.splice(index, 1);
                }
            });
            
            // Stop animation when no confetti left
            if (confetti.length > 0) {
                requestAnimationFrame(drawConfetti);
            }
        }
        
        // Start confetti animation
        setTimeout(() => {
            drawConfetti();
        }, 500);
        
        // Handle window resize
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });
        
        // Auto-redirect after 30 seconds (optional)
        setTimeout(() => {
            const redirectBanner = document.createElement('div');
            redirectBanner.style.cssText = `
                position: fixed;
                bottom: 20px;
                right: 20px;
                background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
                color: white;
                padding: 1rem 1.5rem;
                border-radius: 12px;
                box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
                z-index: 1001;
                font-weight: 600;
                cursor: pointer;
                animation: slideUp 0.3s ease-out;
            `;
            redirectBanner.innerHTML = `
                <div style="display: flex; align-items: center; gap: 0.5rem;">
                    <i class="bi bi-arrow-right-circle"></i>
                    Continue to Marketplace
                </div>
            `;
            redirectBanner.onclick = () => window.location.href = '/marketplace2';
            document.body.appendChild(redirectBanner);
        }, 30000);
        
        // Notify token balance system of successful purchase
        document.addEventListener('DOMContentLoaded', function() {
            // Dispatch custom event for token balance update
            const tokenPurchaseEvent = new CustomEvent('tokenPurchaseSuccess', {
                detail: {
                    amount: <%- purchase.tokensReceived %>,
                    packageName: '<%- purchase.packageName %>',
                    newBalance: <%- purchase.newBalance || 0 %>
                }
            });
            document.dispatchEvent(tokenPurchaseEvent);
            
            // Also try to update any existing token balance displays
            if (typeof window.updateTokenBalance === 'function') {
                window.updateTokenBalance(<%- purchase.newBalance || 0 %>);
            }
            
            // Show success notification if token system is loaded
            if (typeof window.TokenBalance !== 'undefined') {
                setTimeout(() => {
                    const tokenSystem = new window.TokenBalance();
                    tokenSystem.refreshBalance();
                }, 1000);
            }
        });
    </script>
</body>
</html>