    <script>
        // Add additional auth check on page load
        document.addEventListener('DOMContentLoaded', () => {
            // If no auth token is available, redirect to login
            if (!window.authToken && !localStorage.getItem('token')) {
                console.error('No authentication token available, redirecting to login');
                window.location.href = '/login2?returnTo=' + encodeURIComponent('/post-business');
            }
        });
        
        // Execute after the main post-business.js is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Check for the selectedImageCount element
            const countElement = document.getElementById('selectedImageCount');
            if (countElement) {
                // Function to update the badge style based on count
                function updateCountStyle() {
                    const count = parseInt(countElement.textContent || '0');
                    
                    // Remove existing classes
                    countElement.classList.remove('below-minimum', 'meets-minimum');
                    
                    // Add appropriate class based on count
                    if (count < 3) {
                        countElement.classList.add('below-minimum');
                    } else {
                        countElement.classList.add('meets-minimum');
                    }
                }
                
                // Create a MutationObserver to watch for content changes
                const observer = new MutationObserver(updateCountStyle);
                observer.observe(countElement, { 
                    childList: true,
                    characterData: true,
                    subtree: true
                });
                
                // Initial update
                updateCountStyle();
            }
        });
    </script>

