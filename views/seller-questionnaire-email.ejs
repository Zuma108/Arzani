<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Questionnaire - Your Email | Arzani Marketplace</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <%- include('../views/partials/tailwind-setup') %>
    <link rel="stylesheet" href="/css/seller-questionnaire.css">
    <link rel="stylesheet" href="/css/progress-bar.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: white;
            overflow: hidden; /* Hide scrollbar */
        }
        .header {
            height: 87px;
            border-bottom: 0.8px solid #bfbcc6;
        }
        .content-container {
            height: calc(100vh - 87px - 100px); /* Header height (87px) and footer height (100px) */
            overflow-y: auto; /* Enable scrolling inside container if needed */
            padding-bottom: 20px;
        }
        .btn-main {
            background-color: #25224a;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-next {
            background-color: #041b76;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
            box-shadow: 7px 7px 17px 0px rgba(25,31,64,0.22);
        }
        .progress-bar {
            background-color: #dee8ff;
            height: 10px;
        }
        .progress-active {
            background-color: #3e50f7;
        }
        .exit-link {
            color: #25224a;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .profile-pics {
            display: flex;
            align-items: center;
        }
        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
        }
        .profile-pic:not(:first-child) {
            margin-left: -15px;
        }
    </style>
    <script src="/js/questionnaire-logger.js"></script>
</head>
<body>
    <div class="w-full h-screen flex flex-col bg-white">
        <!-- Header -->
        <header class="header w-full bg-white flex items-center flex-shrink-0">
            <div class="container mx-auto px-4 md:px-8 flex items-center justify-between">
                <!-- Logo -->
                <div class="h-12 md:h-16">
                    <img src="/figma design exports/logos/Arzani black-white background 2.png" alt="Arzani" class="h-full">
                </div>
                
                <!-- Right section -->
                <div class="flex items-center gap-4">
                    <!-- Help button -->
                    <div class="hidden md:flex mr-4 h-12 px-6 items-center border border-[#bfbcc6] rounded">
                        <span class="text-[#464154] text-base font-medium">Need help?</span>
                    </div>
                    
                    <!-- Profile pictures -->
                    <div class="profile-pics mr-4">
                        <img src="https://randomuser.me/api/portraits/women/32.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Support agent" class="profile-pic">
                        <img src="https://randomuser.me/api/portraits/women/68.jpg" alt="Support agent" class="profile-pic">
                    </div>
                    
                    <!-- Exit link -->
                    <a href="/" class="exit-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span class="hidden sm:inline">Exit</span>
                    </a>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="content-container flex-grow page-transition">
            <div class="container mx-auto px-4 max-w-2xl pt-8 md:pt-12">
                <h1 class="text-[#25224a] text-2xl md:text-3xl font-black mb-4 text-center">What's your email?</h1>
                <p class="text-[#5f5770] text-lg mb-8 text-center">We'll send you updates about your listing and interested buyers.</p>
                
                <!-- Email Input Form -->
                <div class="mt-8">
                    <div class="mb-6">
                        <label for="email" class="block text-[#25224a] text-lg font-medium mb-2">Email Address</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            class="w-full px-4 py-4 border border-[#bfbcc6] rounded-md focus:outline-none focus:ring-2 focus:ring-[#3e50f7] text-lg" 
                            placeholder="your.email@example.com"
                        >
                        <div id="emailError" class="text-red-500 text-left hidden mt-2">Please enter a valid email address</div>
                    </div>
                    
                    <!-- Privacy notice -->
                    <div class="mt-6 text-[#5f5770] text-sm">
                        <p>By continuing, you agree to our <a href="/terms" class="text-[#3e50f7]">Terms of Service</a> and <a href="/privacy" class="text-[#3e50f7]">Privacy Policy</a>.</p>
                    </div>
                </div>
            </div>
        </main>
        
        <!-- Footer progress bar -->
        <footer class="w-full bg-white flex-shrink-0">
            <!-- Progress bar system -->
            <div class="container mx-auto px-4 md:px-20 py-2">
                <div class="progress-status">
                    <div class="current-page">Your Email</div>
                    <div class="pages-count">Step 2 of 11</div>
                </div>
                <div class="progress-container">
                    <div class="progress-bar">
                        <div class="progress-active" style="width: 18%;"></div>
                    </div>
                </div>
                <div class="step-indicators">
                    <% for(let i = 1; i <= 11; i++) { %>
                        <div class="step-dot <%= i === 1 ? 'completed' : (i === 2 ? 'active' : '') %>" data-step="<%= i %>"></div>
                    <% } %>
                </div>
            </div>
                        
                <div class="container mx-auto px-4 md:px-20 py-6 md:py-8 pb-10 sm:pb-8 flex justify-between items-center">
                    <button id="backBtn" class="text-[#25224a] text-base font-medium">Back</button>
                    <button id="nextBtn" class="btn-next px-6 md:px-8 py-3 md:py-4 text-white text-base font-medium">Next</button>
                </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/js/questionnaire-navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add page entry animation
            document.querySelector('main').classList.add('page-transition');
            
            // Set up email input field and error handling
            const emailInput = document.getElementById('email');
            const emailError = document.getElementById('emailError');
            
            // Check if there's a saved email in localStorage
            const savedEmail = localStorage.getItem('sellerEmail');
            if (savedEmail) {
                emailInput.value = savedEmail;
                questionnaireLogger.log('Loaded saved email', { email: savedEmail });
            }
            
            // Add input validation
            emailInput.addEventListener('input', function() {
                validateEmail();
            });
            
            // Email validation function
            function validateEmail() {
                const emailValue = emailInput.value.trim();
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                
                if (!emailValue) {
                    emailError.textContent = 'Please enter your email address';
                    emailError.classList.remove('hidden');
                    emailInput.classList.add('border-red-500');
                    return false;
                } else if (!emailRegex.test(emailValue)) {
                    emailError.textContent = 'Please enter a valid email address';
                    emailError.classList.remove('hidden');
                    emailInput.classList.add('border-red-500');
                    return false;
                } else {
                    emailError.classList.add('hidden');
                    emailInput.classList.remove('border-red-500');
                    return true;
                }
            }
            
            // Add validation function for the navigation script
            window.validateBeforeNext = function() {
                if (!validateEmail()) {
                    questionnaireLogger.error('Validation failed: Invalid email', { email: emailInput.value });
                    return false;
                }
                
                // Save to localStorage
                localStorage.setItem('sellerEmail', emailInput.value.trim());
                
                questionnaireLogger.dataSaved('email', { email: emailInput.value.trim() });
                showSaveSuccess();
                
                return true;
            };
            
            // Function to show a brief success message
            function showSaveSuccess() {
                // Create or get the success message element
                let successMessage = document.getElementById('save-success-message');
                
                if (!successMessage) {
                    successMessage = document.createElement('div');
                    successMessage.id = 'save-success-message';
                    successMessage.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md transition-all duration-500 transform scale-0';
                    successMessage.innerHTML = `
                        <div class="flex items-center">
                            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                            </svg>
                            <span>Email saved successfully</span>
                        </div>
                    `;
                    document.body.appendChild(successMessage);
                }
                
                // Show and then hide the message
                successMessage.classList.remove('scale-0');
                successMessage.classList.add('scale-100');
                
                setTimeout(() => {
                    successMessage.classList.remove('scale-100');
                    successMessage.classList.add('scale-0');
                }, 2000);
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add page entry animation
            document.querySelector('main').classList.add('page-transition');
            
            // Get form elements
            const emailInput = document.getElementById('email');
            const emailError = document.getElementById('emailError');
            const nextBtn = document.getElementById('nextBtn');
            
            // Function to validate email
            function validateEmail(email) {
                const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(String(email).toLowerCase());
            }
            
            // Function to save email to database
            async function saveEmailToDatabase(email) {
                try {
                    // Ensure we have an anonymous ID before saving
                    const anonymousId = ensureAnonymousId();
                    
                    const response = await fetch('/api/save-customer-email', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ 
                            email: email,
                            source: 'seller-questionnaire',
                            anonymousId: anonymousId
                        })
                    });
                    
                    const result = await response.json();
                    if (result.success) {
                        console.log('Email successfully saved to database');
                    } else {
                        console.error('Failed to save email to database:', result.message);
                    }
                } catch (error) {
                    console.error('Error saving email to database:', error);
                    // Continue with flow even if saving to database fails
                }
            }
            
            // Function to ensure we have an anonymous ID
            function ensureAnonymousId() {
                let anonymousId = localStorage.getItem('questionnaireAnonymousId');
                
                if (!anonymousId) {
                    anonymousId = 'anon_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
                    localStorage.setItem('questionnaireAnonymousId', anonymousId);
                    console.log('Generated new anonymous ID:', anonymousId);
                }
                
                return anonymousId;
            }
            
            // Set initial value from localStorage if available
            const storedEmail = localStorage.getItem('sellerEmail');
            if (storedEmail) {
                emailInput.value = storedEmail;
            }
            
            // Listen for input changes
            emailInput.addEventListener('input', function() {
                // Store the email in localStorage immediately as it's typed
                localStorage.setItem('sellerEmail', this.value.trim());
                
                // Hide error message if valid
                if (validateEmail(this.value)) {
                    emailError.classList.add('hidden');
                    emailInput.classList.remove('border-red-500');
                }
            });
            
            // Validate before proceeding to next page
            window.validateBeforeNext = function() {
                const email = emailInput.value.trim();
                
                if (!email || !validateEmail(email)) {
                    emailError.classList.remove('hidden');
                    emailInput.classList.add('border-red-500');
                    emailInput.focus();
                    return false;
                }
                
                // Ensure the email is saved in localStorage
                localStorage.setItem('sellerEmail', email);
                
                // Ensure we have an anonymous ID
                ensureAnonymousId();
                
                // Save to database for outreach purposes
                saveEmailToDatabase(email);
                
                return true;
            };

            // Direct event listener for next button to ensure email is captured
            nextBtn.addEventListener('click', function(e) {
                console.log('Next button clicked on email page');
                if (!validateBeforeNext()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            });
            
            // Ensure anonymous ID is created even if the user doesn't enter an email
            ensureAnonymousId();
        });
    </script>
</body>
</html>