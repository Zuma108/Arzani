                </nav>
                
                <!-- User Profile Section -->
                <div class="border-t border-gray-200 dark:border-gray-700 p-4">
                    <div class="flex items-center">
                        <div class="h-10 w-10 rounded-full bg-gradient-to-r from-primary to-secondary flex items-center justify-center text-white font-medium">
                            <%= (locals.user && locals.user.username) ? locals.user.username.charAt(0).toUpperCase() : 'U' %>
                        </div>
                        <div class="ml-3 hidden md:hidden xl:block">
                            <p class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= (locals.user && locals.user.username) ? locals.user.username : 'User' %></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400"><%= (locals.user && locals.user.subscription) ? locals.user.subscription : 'Free' %> Plan</p>
                        </div>
                        <button id="signOutBtn" class="ml-auto hidden md:hidden xl:block text-gray-500 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400">
