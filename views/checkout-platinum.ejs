<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Platinum Plan Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://js.stripe.com/v3/"></script>
    <style>
        :root {
            --platinum-primary: #E5E4E2;
            --platinum-secondary: #B4B4B4;
            --platinum-gradient: linear-gradient(135deg, var(--platinum-primary), var(--platinum-secondary));
        }

        /* Use same base styles as gold but with platinum colors */
        .checkout-container {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.15);
            margin-top: 3rem;
            overflow: hidden;
            position: relative;
        }

        .popular-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: #041b76;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 1rem;
            font-weight: 600;
            z-index: 1;
        }

        .header-banner {
            background: var(--platinum-gradient);
            padding: 2.5rem 2rem;
            text-align: center;
            color: #2a2a2a;
        }

        /* Additional platinum-specific styles */
        .submit-button {
            background: #041b76;
            color: white;
            border: none;
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 0.5rem;
            width: 100%;
            transition: all 0.3s ease;
        }

        .submit-button:hover {
            background: #052287;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(4, 27, 118, 0.2);
        }

        /* Rest of the styles similar to gold */
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="checkout-container">
                    <div class="popular-badge">Most Popular</div>
                    <div class="header-banner">
                        <span class="plan-badge">Platinum Plan</span>
                        <h1 class="display-6 mb-3">Ultimate Business Access</h1>
                        <div class="price-tag">
                            Â£50 <span class="price-period">/month</span>
                        </div>
                    </div>

                    <div class="p-4">
                        <div class="features">
                            <!-- Add platinum-specific features -->
                            <div class="feature-item">
                                <svg class="feature-icon" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                                </svg>
                                <div>
                                    <h5 class="mb-0">Off Market Leads</h5>
                                    <small class="text-muted">Exclusive access to off-market opportunities</small>
                                </div>
                            </div>
                            <!-- Add more platinum features -->
                        </div>

                        <div class="payment-section">
                            <h4 class="mb-4">Payment Details</h4>
                            <form id="payment-form">
                                <div id="payment-element"></div>
                                <button id="submit-button" class="submit-button">
                                    Subscribe Now
                                </button>
                                <div id="error-message" class="text-danger mt-3"></div>
                            </form>
                            <div class="guarantee-badge">
                                <svg class="feature-icon mb-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                                </svg>
                                <div>30-Day Money-Back Guarantee</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Stripe.js before your custom script -->
    <script src="https://js.stripe.com/v3/" async crossorigin="anonymous"></script>
    <script>
        // Same updated script as checkout-gold.ejs but with plan: 'platinum'
        window.addEventListener('load', async () => {
            const stripe = Stripe('<%= stripePublishableKey %>');
            let elements;

            async function initialize() {
                const response = await fetch("/payment/create-checkout-session", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": `Bearer ${localStorage.getItem('token')}`
                    },
                    body: JSON.stringify({ plan: 'platinum' })
                });

                const { clientSecret } = await response.json();
                elements = stripe.elements({ clientSecret });

                const paymentElement = elements.create("payment");
                paymentElement.mount("#payment-element");
            }

            document.querySelector("#payment-form").addEventListener("submit", async (e) => {
                e.preventDefault();
                const button = document.querySelector("#submit-button");
                button.disabled = true;

                const { error } = await stripe.confirmPayment({
                    elements,
                    confirmParams: {
                        return_url: `${window.location.origin}/payment/success`
                    }
                });

                if (error) {
                    const messageDiv = document.querySelector("#error-message");
                    messageDiv.textContent = error.message;
                    button.disabled = false;
                }
            });

            initialize();
        });
    </script>
</body>
</html>
