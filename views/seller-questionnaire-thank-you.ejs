<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You | Arzani Marketplace</title>
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <%- include('../views/partials/tailwind-setup') %>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: white;
        }
        .header {
            height: 87px;
            border-bottom: 0.8px solid #bfbcc6;
        }
        .btn-main {
            background-color: #25224a;
            color: white;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-outline {
            border: 2px solid #25224a;
            color: #25224a;
            border-radius: 0 1rem 1rem 1rem;
        }
        .btn-outline:hover {
            background-color: #f0f4ff;
        }
        .exit-link {
            color: #25224a;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W50GKB6F3M"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-W50GKB6F3M');
    </script>
</head>
<body>
    <div class="w-full min-h-screen flex flex-col bg-white">
        <!-- Header -->
        <header class="header w-full bg-white flex items-center flex-shrink-0">
            <div class="container mx-auto px-4 md:px-8 flex items-center justify-between">
                <!-- Logo -->
                <div class="h-12 md:h-16">
                    <img src="/figma design exports/logos/Arzani black-white background 2.png" alt="Arzani" class="h-full">
                </div>
                
                <!-- Right section -->
                <div class="flex items-center gap-4">
                    <!-- Exit link -->
                    <a href="/" class="exit-link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16 17 21 12 16 7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                        <span class="hidden sm:inline">Home</span>
                    </a>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="flex-grow flex items-center justify-center p-4">
            <div class="max-w-2xl w-full bg-white p-8 rounded-xl shadow-lg">
                <div class="text-center mb-8">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <h1 class="text-3xl font-bold text-[#25224a] mb-2">Thank You!</h1>
                    <p class="text-[#5f5770] text-lg">For taking time to complete the questionnaire.</p>
                </div>
                
                <div class="bg-blue-50 p-6 rounded-lg mb-8">
                    <h3 class="text-xl font-bold text-[#25224a] mb-3">What's Next?</h3>
                    <p class="text-[#5f5770] mb-4">
                        To access your full valuation report and list your business on our marketplace, you can create an account anytime.
                    </p>
                    <p class="text-[#5f5770]">
                        When you sign up, all your information will be automatically connected to your account.
                    </p>
                </div>
                
                <div class="flex flex-col md:flex-row gap-4 justify-center">
                    <a href="/signup" class="btn-main py-3 px-6 text-center font-medium text-lg">
                        Create Account Now
                    </a>
                    <a href="/" class="btn-outline py-3 px-6 text-center font-medium text-lg">
                        Back to Homepage
                    </a>
                </div>
                
                <div class="text-center mt-8 text-sm text-[#8e8a9a]">
                    <p>
                        Already have an account? <a href="/login" class="text-[#3e50f7] font-medium">Log in</a> to access your information.
                    </p>
                </div>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="bg-white py-8 border-t border-[#bfbcc6]">
            <div class="container mx-auto px-4 text-center text-[#5f5770]">
                <p>&copy; <%= new Date().getFullYear() %> Arzani Marketplace. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Thank you page loaded. Clearing questionnaire data from localStorage.');

            // List of keys to potentially clear or mark as completed
            const questionnaireKeys = [
                'sellerEmail',
                'sellerBusinessName',
                'sellerIndustry',
                'sellerDescription',
                'sellerYearEstablished',
                'sellerYearsInOperation',
                'sellerContactName',
                'sellerContactPhone',
                'sellerLocation',
                'sellerRevenueExact',
                'sellerRevenuePrevYear',
                'sellerRevenue2YearsAgo',
                'sellerRevenue3YearsAgo',
                'sellerEbitda',
                'sellerEbitdaPrevYear',
                'sellerEbitda2YearsAgo',
                'sellerCashOnCash',
                'sellerFfeValue',
                'sellerFfeItems',
                'sellerGrowthRate',
                'sellerGrowthAreas',
                'sellerGrowthChallenges',
                'sellerScalability',
                'sellerTotalDebtAmount',
                'sellerDebtTransferable',
                'sellerDebtNotes',
                'sellerDebtItems',
                'sellerValuationData',
                'sellerAskingPrice',
                // Keep IDs for potential linking during signup/login
                // 'questionnaireAnonymousId', 
                // 'questionnaireSubmissionId',
                'questionnaireDataSubmitted', // Mark as submitted
                'questionnaireLinkStatus' // Update status
            ];

            // Clear most keys, but keep IDs and set status flags
            questionnaireKeys.forEach(key => {
                if (key !== 'questionnaireAnonymousId' && key !== 'questionnaireSubmissionId') {
                    localStorage.removeItem(key);
                }
            });

            // Set flags indicating completion
            localStorage.setItem('questionnaireDataSubmitted', 'true');
            localStorage.setItem('questionnaireLinkStatus', 'completed'); // Or 'pending_link' if signup is next

            console.log('Questionnaire data cleared/marked as completed.');
            
            // Optional: If anonymous ID is no longer needed after completion, remove it too
            // localStorage.removeItem('questionnaireAnonymousId');
        });
    </script>
</body>
</html>
