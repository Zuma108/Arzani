<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts tagged with <%= tag.name %> | Arzani Blog</title>
    <meta name="description" content="Explore articles tagged with <%= tag.name %> on the Arzani blog for UK small business owners and entrepreneurs.">
    
    <link rel="icon" href="/figma design exports/images.webp/arzani-icon-nobackground.png" type="image/png">
    <link rel="stylesheet" href="/css/modern.css">
    <link rel="stylesheet" href="/css/blog.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#316FD4',
                        dark: '#141414',
                        'dark-light': '#1E1E1E'
                    },
                    fontFamily: {
                        'sans': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-W50GKB6F3M"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-W50GKB6F3M');
    </script>
</head>
<body class="bg-white text-gray-900 font-sans">
    <div class="page-wrapper">
       
        <%- include('../partials/navbar') %>

        <!-- Tag Header -->
        <section class="relative pt-28 md:pt-36 pb-12 md:pb-16 bg-primary bg-opacity-5">
            <div class="absolute inset-0 z-0 opacity-5">
                <div class="grid-pattern"></div>
            </div>
            
            <div class="container mx-auto px-4 md:px-6 relative z-10">
                <!-- Breadcrumbs -->
                <div class="mb-8 flex items-center text-sm text-gray-500">
                    <a href="/" class="hover:text-primary transition-colors">Home</a>
                    <span class="mx-2">/</span>
                    <a href="/blog" class="hover:text-primary transition-colors">Blog</a>
                    <span class="mx-2">/</span>
                    <span class="text-gray-900">Tag: <%= tag.name %></span>
                </div>
                
                <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
                    Posts tagged with <span class="text-primary">#<%= tag.name %></span>
                </h1>
                
                <!-- Posts count -->
                <div class="inline-block px-3 py-1 bg-primary bg-opacity-10 text-primary rounded-full text-sm">
                    <%= posts.length %> articles
                </div>
            </div>
        </section>

        <!-- Tagged Posts -->
        <section class="py-12 md:py-16 bg-white">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <% posts.forEach(post => { %>
                        <a href="/blog/<%= post.slug %>" class="block group">
                            <article class="bg-white border border-gray-200 rounded-xl overflow-hidden transition-all group-hover:border-primary/30 h-full flex flex-col shadow-sm hover:shadow">
                                <!-- Post content here -->
                            </article>
                        </a>
                    <% }); %>
                </div>
            </div>
        </section>
        
        <%- include('../partials/footer') %>
    </div>

    <script src="/js/navigation.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add sticky header on scroll
            const header = document.querySelector('header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('scrolled', 'bg-dark/80', 'backdrop-blur-md', 'border-b', 'border-gray-800');
                } else {
                    header.classList.remove('scrolled', 'bg-dark/80', 'backdrop-blur-md', 'border-b', 'border-gray-800');
                }
            });
            
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', function() {
                    const expanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !expanded);
                    mobileMenu.classList.toggle('hidden');
                });
            }
        });
    </script>
</body>
</html>
