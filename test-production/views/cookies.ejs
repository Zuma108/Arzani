        .browser-link:hover {
            transform: translateY(-3px);
            border-color: var(--primary-blue);
            box-shadow: 0 5px 15px rgba(49,111,212,0.15);
        }
        
        .browser-link svg {
            margin-right: 0.75rem;
        }
        
        .cookie-policy-header {
            text-align: center;
            margin-bottom: 3rem;
        }
        
        .cookie-policy-header h1 {
